@model List<TblEmployee>
@{
    ViewBag.Title = "Index";
    KemrexController kemrex = ((KemrexController)this.ViewContext.Controller);
    Layout = kemrex.PathViewShared("_lyDefault");
    WidgetAlertModel Alert = (WidgetAlertModel)ViewBag.Alert;
    //WidgetPaginationModel Pagination = (WidgetPaginationModel)ViewBag.Pagination;
}

@section Scripts {
<script type="text/javascript">
        var isMobile = IsMobile();
        $(document).ready(function () {
            window.setTimeout(function () {
                $(".alert").fadeTo(1000, 0).slideUp(1000, function () {
                    $(this).remove();
                });
            }, 5000);
            if (!isMobile) {
                waitingDialog.show('Waiting for loading data', { dialogSize: 'md', progressType: 'primary' });
            }

            LoadTable();


            $(BasicMenu).slideToggle();
        });


        $(document).on("click", ".btnDelete", function () {
            var isConfirm = false;

            var tempEmpId = $(this).closest('div').find('.tempEmpID').val();
            swal({
                title: "Delete",
                text: "Do you want to delete?",
                type: "warning",
                showCancelButton: true,
                closeOnConfirm: false,
                showLoaderOnConfirm: true
            },
                function (isConfirm) {
                    if (isConfirm) {
                        
                        $('#EmpId').val(tempEmpId)
                         $('#frmMain').attr('action', '@Url.Action("DeleteNew", new { controller = "Employee", are = "" })');
                          $('#frmMain').submit();

                    }
                });

            return false;
        });

        function LoadTable() {

            var html = '';
            var criteria = "";
            var url = '@Url.Action("GetEmployeeList", new { controller = "Employee", fieldSearch = ""})';
            var urlDetail = '@Url.Action("Detail", new { controller = "Employee", area = ""})';
            var urlDelete = '@Url.Action("Delete", new { controller = "Employee", area = ""})';
            $(".divDetail").empty();

            if (isMobile) {

                html += '<table class="table table-hover" >';
                html += '<thead>';
                html += '<tr class="">';
                html += '<th></th>';
                html += '</tr>';
                html += '</thead>';
                $.ajax({
                    url: url,
                    type: "POST",
                    // data: JSON.stringify(criteria),
                    dataType: "json",
                    contentType: "application/json; charset=utf-8",
                    success: function (data) {
                        html += '<tbody>';
                        if (data != null && data.length > 0) {

                            $.each(data, function (index, item) {
                                html += '<tr>';
                                html += '<td>'
                                html += '<div class="">'
                                html += '<div class="content">'
                                html += '<div class="row" >';
                                html += '<div class="col-sm-5">';
                                html += '<div class="icon-big text-center">';

                                html += '</div>';
                                html += '</div>';
                                html += '<div class="col-sm-10">';
                                html += '<div>';
                                html += '<div class="col-sm-12"><div class="textrow"><div class="text-primary"><b>ชื่อ</b></div> : <div class="text-default">' + item.EmpNameTh + '</div></div></div>';
                                html += '<div class="col-sm-12"><div class="textrow"><div class="text-primary"><b>ตำแหน่ง</b></div>  : ' + (item.Position != null ? item.Position.PositionName : "") + '</div></div>';
                                html += '<div class="col-sm-12"><div class="textrow"><div class="text-primary"><b>แผนก</b></div> : ' + (item.Department != null ? item.Department.DepartmentName : "") + '</div></div>';
                                html += '<div div class="col-sm-12"><div class="textrow"><div class="text-primary"><b>เบอร์โทร</b></div> : ' + item.EmpMobile + '</div></div>';
                                html += '<div div class="col-sm-12"><div class="textrow"><div class="text-primary"><b>อีเมล์</b></div> : ' + item.EmpEmail + '</div></div>';

                                html += '<div> <a href="' + urlDetail + '/' + item.EmpId + '" class="btn btn-md btn-floating btn-primary"><i class="fa fa-pencil" aria-hidden="true"></i></a>';
                                html += '<input type="hidden" name="tempEmpID"  class="tempEmpID" id="tempEmpID" value="' + item.EmpId + '" /> ';
                                html += '<button  class="btn btn-md btn-floating btn-danger  btnDelete"><i class="fa fa-trash" aria-hidden="true"></i></button></div>';
                                html += '</div>';
                                html += '</div>';
                                html += '</div>';

                                html += '</div>';
                                html += '</td>'
                                html += '</tr>';
                            });
                        }
                        html += '</tbody>';

                        html += ' </table>';

                        $(".divDetail").append(html);
                        $(".divDetail table").DataTable(
                        );


                    }
                });


            }
            else {
                html += '<table class="table  table-striped table-hover "  >';
                html += '<thead>';
                html += '<tr class="table-primary">';
                html += '<th align="center">ชื่อ</th>';
                html += '<th align="center">ตำแหน่ง</th>';
                html += '<th align="center">แผนก</th>';
                html += '<th align="center">เบอร์โทร</th>';
                html += '<th align="center">อีเมล์</th>';
                html += '<th align="center">เครื่องมือ</th>';
                html += '</tr>';
                html += '</thead>';
                html += '<tbody>';



                $.ajax({
                    url: url,
                    type: "Post",
                    // data: JSON.stringify(criteria),
                    dataType: "json",
                    contentType: "application/json; charset=utf-8",
                    success: function (data) {

                        var statusName = "";
                        if (data != null) {
                            var empid = "";
                            $.each(data, function (index, item) {
                                html += '<tr>';
                                html += '<td>' + item.EmpNameTh + '</td>';
                                html += '<td>' + (item.Position != null ? item.Position.PositionName : "") + '</td>';
                                html += '<td>' + (item.Department != null ? item.Department.DepartmentName : "") + '</td>';
                                html += '<td>' + item.EmpMobile + '</td>';
                                html += '<td>' + item.EmpEmail + '</td>';
                                html += '<td> ';
                                html += '<a href = "' + urlDetail + '/' + item.EmpId + '" class="btn btn-xs btn-primary" > ';
                                html += '<i class="fa fa-pencil" aria-hidden="true"></i>&nbsp;แก้ไข </a>&nbsp;';
                                html += '<input type="hidden" name="EmpId" class="EmpId" value="' + item.EmpId + '" /> ';
                                html += '<button type="submit" class="btn btn-danger btn-xs btnDelete"><i class="fa fa-trash" aria-hidden="true"></i>&nbsp;ลบ</button>';
                                html += '</td> ';
                                html += '</tr>';
                            });
                        }
                        html += '</tbody>';
                        html += ' </table>';

                        $(".divDetail").append(html);
                        $(".divDetail table").DataTable(
                            {
                                order: [[0, 'asc']]
                            }
                        );
                        window.setTimeout(function () {
                            waitingDialog.hide();
                        }, 2000);
                    },
                    error: function (error) {
                        alert(error);
                        waitingDialog.hide();
                        //  waitingDialog.hide();
                    }
                });
            }
        }
</script>
}

