@section Scripts {
    <script type="text/javascript">
        
        $(document).ready(function () {
            window.setTimeout(function () {
                $(".alert").fadeTo(1000, 0).slideUp(1000, function () {
                    $(this).remove();
                });
            }, 5000);
            waitingDialog.show('Waiting for loading data', { dialogSize: 'md', progressType: 'primary' });

            LoadTable();
        });

        function LoadTable() {

            var html = '';
            var criteria = "";
            var url = '@Url.Action("GetEmployeeList", new { controller = "Employee", fieldSearch = ""})';
            var urlDetail = '@Url.Action("Detail", new { controller = "Employee", area = ""})';
            var urlDelete = '@Url.Action("Delete", new { controller = "Employee", area = ""})';
            $(".divDetail").empty();
            html += '<table class="table  table-striped table-hover "  >';
            html += '<thead>';
            html += '<tr class="table-primary">';
            html += '<th align="center">ชื่อ</th>';
            html += '<th align="center">ตำแหน่ง</th>';
            html += '<th align="center">แผนก</th>';
            html += '<th align="center">เบอร์โทร</th>';
            html += '<th align="center">อีเมล์</th>';
            html += '<th align="center">เครื่องมือ</th>';
            html += '</tr>';
            html += '</thead>';
            html += '<tbody>';

           

            $.ajax({
                url: url,
                type: "Post",
                // data: JSON.stringify(criteria),
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                success: function (data) {

                    var statusName = "";
                    if (data != null) {
                        var empid = "";
                        $.each(data, function (index, item) {
                            html += '<tr>';
                            html += '<td>' + item.EmpNameTh + '</td>';
                            html += '<td>' + (item.Position != null ? item.Position.PositionName : "") + '</td>';
                            html += '<td>' + (item.Department != null ? item.Department.DepartmentName : "") + '</td>';
                            html += '<td>' + item.EmpMobile + '</td>';
                            html += '<td>' + item.EmpEmail + '</td>'; 
                            html += '<td> ';
                            html += '<a href = "' + urlDetail + '/' + item.EmpId + '" class="btn btn-xs btn-primary" > ';
                            html += '<i class="fa fa-pencil" aria-hidden="true"></i>&nbsp;แก้ไข </a>&nbsp;';
                           
                            html += '<form method="post" action="@Url.Action("Delete", new { controller = "Employee", are = "" })"';
                            html += 'class="fnc-delete inline-block"><input type="hidden" name="EmpId" value="' + item.EmpId + '" /> @Html.AntiForgeryToken()';
                            html += '<button type="submit" class="btn btn-danger btn-xs"><i class="fa fa-trash" aria-hidden="true"></i>&nbsp;ลบ</button></form>';
                            html += '</td> ';
                            html += '</tr>';
                        });
                    }
                    html += '</tbody>';
                    html += ' </table>';

                    $(".divDetail").append(html);
                    $(".divDetail table").DataTable(
                        {
                            order: [[0, 'asc']]
                        }
                    );
                    window.setTimeout(function () {
                        waitingDialog.hide();
                    }, 2000);
                },
                error: function (error) {
                    alert(error);
                    waitingDialog.hide();
                    //  waitingDialog.hide();
                }
            });
        }
    </script>
}

