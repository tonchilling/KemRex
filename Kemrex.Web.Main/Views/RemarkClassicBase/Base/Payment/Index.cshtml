@using Kemrex.Core.Database.Models
@using Kemrex.Web.Common.Controllers
@using Kemrex.Web.Common.Models
@using Kemrex.Core.Common.Helper
@*@model List<TransferStockHeader>*@
@{
    ViewBag.Title = "Index";
    KemrexController kemrex = ((KemrexController)this.ViewContext.Controller);
    Layout = kemrex.PathViewShared("_lyDefault");
    WidgetAlertModel Alert = (WidgetAlertModel)ViewBag.Alert;
    //WidgetPaginationModel Pagination = (WidgetPaginationModel)ViewBag.Pagination;

}

@section Scripts {
    <script type="text/javascript">
        var url = '@Url.Action("GetPaymentList", "Payment")';
        var isMobile = IsMobile();
        $(document).ready(function () {
            window.setTimeout(function () {
                $(".alert").fadeTo(1000, 0).slideUp(1000, function () {
                    $(this).remove();
                });
            }, 5000);
            if (!isMobile) {
                waitingDialog.show('Waiting for loading data', { dialogSize: 'md', progressType: 'primary' });
            }
            
            LoadTable();
            
        });

        $(PaymentMenu).slideToggle();

        function LoadTable() {

            var html = '';
            var criteria = "";
            var urlDetail = '@Url.Action("Detail", new { controller = "Payment", area = ""})';
            $(".divDetail").empty();


            if (isMobile) {

                html += '<table class="table table-hover" >';
                html += '<thead>';
                html += '<tr class="">';
                html += '<th></th>';
                html += '</tr>';
                html += '</thead>';
                $.ajax({
                    url: url,
                    type: "POST",
                    // data: JSON.stringify(criteria),
                    dataType: "json",
                    contentType: "application/json; charset=utf-8",
                    success: function (data) {
                        html += '<tbody>';
                        if (data != null && data.length > 0) {

                            $.each(data, function (index, item) {
                                html += '<tr>';
                                html += '<td>'
                                html += '<div class="">'
                                html += '<div class="content">'
                                html += '<div class="row" >';
                                html += '<div class="col-sm-5">';
                                html += '<div class="icon-big text-center">';

                                html += '</div>';
                                html += '</div>';
                                html += '<div class="col-sm-10">';
                                html += '<div>';
                                html += '<div class="col-sm-12"><div class="textrow"><div class="text-primary"><b>เลขที่การชำระ</b></div> : <div class="text-default">' + item.PaymentNo + '</div></div></div>';
                                html += '<div class="col-sm-12"><div class="textrow"><div class="text-primary"><b>เลขที่ใบแจ้งหนี้</b></div>  : ' + item.InvoiceNo + '</div></div>';
                                html += '<div class="col-sm-12"><div class="textrow"><div class="text-primary"><b>ชื่อผู้โอน</b></div> : ' + item.InvoiceNo + '</div></div>';
                                html += '<div div class="col-sm-12"><div class="textrow"><div class="text-primary"><b>ยอดเงินโอน</b></div> : ' + item.CustomerName + '</div></div>';
                                html += '<div div class="col-sm-12"><div class="textrow"><div class="text-primary"><b>วันที่โอน</b></div> : ' + item.PaymentAmount +'</div></div>';
                                html += '<div div class="col-sm-12"><div class="textrow"><div class="text-primary"><b>วันที่แก้ไขล่าสุด</b></div> : ' + item.StrPaymentDate + '</div></div>';

                                if (item.StatusId == 1) {
                                    statusName = "สร้าง";
                                } else if (item.StatusId == 2) {
                                    statusName = "รอการอนุมัติ";
                                } else if (item.StatusId == 3) {
                                    statusName = "จ่ายแล้ว";
                                } else if (item.StatusId == 4) {
                                    statusName = "ยกเลิก";
                                }

                                html += '<div div class="col-sm-12"><div class="textrow"><div class="text-primary"><b>สถานะ</b></div> : ' + statusName + '</div></div>';
                                html += '<div> <a href="' + urlDetail + '/' + item.PaymentId + '" class="btn btn-md btn-floating' + (item.StatusId <= 3 ? " btn-primary" : " btn-success") + '">';
                                html += '<i class=" ' + (item.StatusId <= 3 ? "fa fa-pencil" : "fa fa-search") + '" aria-hidden="true"></i></a></div>';
                                
                                html += '</div>';
                                html += '</div>';
                                html += '</div>';

                                html += '</div>';
                                html += '</td>'
                                html += '</tr>';
                            });
                        }
                        html += '</tbody>';

                        html += ' </table>';

                        $(".divDetail").append(html);
                        $(".divDetail table").DataTable(
                            { searching: false, paging: true, info: false }
                        );

                        window.setTimeout(function () {
                            waitingDialog.hide();

                            $(".modal-backdrop").remove();

                        }, 2000);

                        waitingDialog.hide();
                    }
                });


            } else {
                html += '<table class="table  table-striped table-hover "  >';
                html += '<thead>';
                html += '<tr class="table-primary" >';
                html += '<th align="center">เลขที่การชำระ</th>';
                html += '<th align="center">เลขที่ใบแจ้งหนี้</th>';
                html += '<th align="center">ชื่อผู้โอน</th>';
                html += '<th align="center">ยอดเงินโอน</th>';
                html += '<th align="center">วันที่โอน</th>';
                html += '<th align="center">สถานะ</th>';
                html += '<th align="center">วันที่แก้ไขล่าสุด</th>';
                html += '<th align="center">เครื่องมือ</th>';
                html += ' </tr>';
                html += '</thead>';
                html += '<tbody>';



                $.ajax({
                    url: url,
                    type: "POST",
                    // data: JSON.stringify(criteria),
                    dataType: "json",
                    contentType: "application/json; charset=utf-8",
                    success: function (data) {

                        var statusName = "";
                        if (data != null) {

                            $.each(data, function (index, item) {
                                html += '<tr>';
                                html += '<td>' + item.PaymentNo + '</td>';
                                html += '<td>' + item.InvoiceNo + '</td>';
                                html += '<td>' + item.CustomerName + '</td>';
                                html += '<td>' + item.PaymentAmount + '</td>';
                                html += '<td>' + item.StrPaymentDate + '</td>';

                                if (item.StatusId == 1) {
                                    statusName = "สร้าง";
                                } else if (item.StatusId == 2) {
                                    statusName = "รอการอนุมัติ";
                                } else if (item.StatusId == 3) {
                                    statusName = "จ่ายแล้ว";
                                } else if (item.StatusId == 4) {
                                    statusName = "ยกเลิก";
                                }

                                html += '<td>' + statusName + '</td>';
                                html += '<td>' + item.StrUpdatedDate + '</td>';
                                html += '<td> <a href="' + urlDetail + '/' + item.PaymentId + '" class="btn btn-xs btn-primary">';
                                if (item.Status == 2) {
                                    html += '<i class="fa fa-eye" aria-hidden="true"></i>&nbsp;View </a>&nbsp;';
                                }
                                else {
                                    html += '<i class="fa fa-pencil" aria-hidden="true"></i>&nbsp;Edit </a>&nbsp;';
                                }

                                html += '</tr>';
                            });
                        }
                        html += '</tbody>';
                        html += ' </table>';

                        $(".divDetail").append(html);
                        $(".divDetail table").DataTable(
                            {
                                //columnDefs: [
                                //    { type: 'date-uk', targets: 4 }
                                //],
                                order: [[0, 'desc']]
                            }
                        );
                        window.setTimeout(function () {
                            waitingDialog.hide();
                        }, 2000);
                    },
                    error: function (error) {
                        alert(error);
                        waitingDialog.hide();
                        //  waitingDialog.hide();
                    }
                });
            }
        }
    </script>
}

<div class="page">
    <div class="page-header">
        <h1 class="page-title">รายการชำระเงิน </h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", new { controller = "Home", area = "" })" })">หน้าแรก</a></li>
            <li class="breadcrumb-item"><a href="javascript:void(0)">การเงิน</a></li>
            <li class="breadcrumb-item active">รายการชำระเงิน</li>
        </ol>
