    <div class="page-content container-fluid">
        <div class="row">
            <div class="col-12">
                @if (ViewBag.Alert != null)
                {
                    @Html.Partial(kemrex.PathViewShared("_wgAlert"), Alert)
                }
                <div class="panel">
                    <div class="panel-heading">
                        <h3 class="panel-title">รายการชำระเงิน<a href="@Url.Action("Detail", new { area = "", controller = "Payment" })" class="btn btn-xs btn-primary" style="color:white;">เพิ่มข้อมูล</a></h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="panel-body dataTables_wrapper">
                        
                        <div class="row">
                            <div class="col-12">
                                <div class="table-responsive divDetail">
                                    <table class="table table-bordered table-hover">
                                        <thead>
                                            <tr align="center">
                                                <th align="center">เลขที่นำเข้าสินค้า</th>
                                                <th align="center">เลขที่อ้างอิง/เลขที่ใบเสร็จ</th>
                                                <th align="center">ผู้นำสินค้าเข้า</th>
                                                <th align="center">สถานะ</th>
                                                <th align="center">วันที่นำสินค้าเข้า</th>
                                                <th align="center">วันที่สร้างรายการ</th>
                                                <th align="center">เครื่องมือ</th>
                                               
                                            </tr>
                                        </thead>
                                        
                                    </table>

                                </div>
                            </div>
                        </div>
                       
                    </div>
                    <!-- /.box-body -->
                </div>
            </div>
        </div>
    </div>
</div>