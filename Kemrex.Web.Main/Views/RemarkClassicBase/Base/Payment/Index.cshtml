@using Kemrex.Core.Database.Models
@using Kemrex.Web.Common.Controllers
@using Kemrex.Web.Common.Models
@using Kemrex.Core.Common.Helper
@*@model List<TransferStockHeader>*@
@{
    ViewBag.Title = "Index";
    KemrexController kemrex = ((KemrexController)this.ViewContext.Controller);
    Layout = kemrex.PathViewShared("_lyDefault");
    WidgetAlertModel Alert = (WidgetAlertModel)ViewBag.Alert;
    //WidgetPaginationModel Pagination = (WidgetPaginationModel)ViewBag.Pagination;

}

@section Scripts {
    <script type="text/javascript">
        var url = '@Url.Action("GetPaymentList", "Payment")';
        $(document).ready(function () {
            window.setTimeout(function () {
                $(".alert").fadeTo(1000, 0).slideUp(1000, function () {
                    $(this).remove();
                });
            }, 5000);
            waitingDialog.show('Waiting for loading data', { dialogSize: 'md', progressType: 'primary' });
            
            LoadTable();
            
        });

        $(EngineerMenu).slideToggle();

        function LoadTable() {

            var html = '';
            var criteria = "";
            var urlDetail = '@Url.Action("Detail", new { controller = "Payment", area = ""})';
            $(".divDetail").empty();
            html += '<table class="table  table-striped table-hover "  >';
            html += '<thead>';
            html += '<tr class="table-primary" >';
            html += '<th align="center">เลขที่การชำระ</th>';
            html += '<th align="center">เลขที่ใบแจ้งหนี้</th>';
            html += '<th align="center">ชื่อลูกค้า</th>';
            html += '<th align="center">ยอดเงินโอน</th>';
            html += '<th align="center">วันที่โอน</th>';
            html += '<th align="center">สถานะ</th>';
            html += '<th align="center">วันที่แก้ไขล่าสุด</th>';
            html += '<th align="center">เครื่องมือ</th>';
            html += ' </tr>';
            html += '</thead>';
            html += '<tbody>';

           

            $.ajax({
                url: url,
                type: "POST",
                // data: JSON.stringify(criteria),
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                success: function (data) {

                    var statusName = "";
                    if (data != null) {

                        $.each(data, function (index, item) {
                            html += '<tr>';
                            html += '<td>' + item.PaymentNo + '</td>';
                            html += '<td>' + item.InvoiceNo + '</td>';
                            html += '<td>' + item.CustomerName + '</td>';
                            html += '<td>' + item.PaymentAmount + '</td>';
                            html += '<td>' + item.StrPaymentDate + '</td>';

                            if (item.StatusId == 1) {
                                statusName = "สร้าง";
                            } else if (item.StatusId == 2) {
                                statusName = "รอการอนุมัติ";
                            } else if (item.StatusId == 3) {
                                statusName = "จ่ายแล้ว";
                            } else if (item.StatusId == 4) {
                            statusName = "ยกเลิก";
                        } 

                            html += '<td>' + statusName + '</td>';
                            html += '<td>' + item.StrUpdatedDate + '</td>';
                            html += '<td> <a href="' + urlDetail + '/' + item.PaymentId + '" class="btn btn-xs btn-primary">';
                            if (item.Status == 2) {
                                html += '<i class="fa fa-eye" aria-hidden="true"></i>&nbsp;View </a>&nbsp;';
                            }
                            else {
                                html += '<i class="fa fa-pencil" aria-hidden="true"></i>&nbsp;Edit </a>&nbsp;';
                            }
                            
                            html += '</tr>';
                        });
                    }
                    html += '</tbody>';
                    html += ' </table>';

                    $(".divDetail").append(html);
                    $(".divDetail table").DataTable(
                        {
                            //columnDefs: [
                            //    { type: 'date-uk', targets: 4 }
                            //],
                            order: [[0, 'desc']]
                        }
                    );
                    window.setTimeout(function () {
                        waitingDialog.hide();
                    }, 2000);
                },
                error: function (error) {
                    alert(error);
                    waitingDialog.hide();
                    //  waitingDialog.hide();
                }
            });
        }
    </script>
}

<div class="page">
    <div class="page-header">
        <h1 class="page-title">รายการชำระเงิน </h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", new { controller = "Home", area = "" })" })">หน้าแรก</a></li>
            <li class="breadcrumb-item"><a href="javascript:void(0)">การเงิน</a></li>
            <li class="breadcrumb-item active">รายการชำระเงิน</li>
        </ol>
    </div>
    <div class="page-content container-fluid">
        <div class="row">
            <div class="col-12">
                @if (ViewBag.Alert != null)
                {
                    @Html.Partial(kemrex.PathViewShared("_wgAlert"), Alert)
                }
                <div class="panel">
                    <div class="panel-heading">
                        <h3 class="panel-title">รายการชำระเงิน<a href="@Url.Action("Detail", new { area = "", controller = "Payment" })" class="btn btn-xs btn-primary" style="color:white;">เพิ่มข้อมูล</a></h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="panel-body dataTables_wrapper">
                        
                        <div class="row">
                            <div class="col-12">
                                <div class="table-responsive divDetail">
                                    <table class="table table-bordered table-hover">
                                        <thead>
                                            <tr align="center">
                                                <th align="center">เลขที่นำเข้าสินค้า</th>
                                                <th align="center">เลขที่อ้างอิง/เลขที่ใบเสร็จ</th>
                                                <th align="center">ผู้นำสินค้าเข้า</th>
                                                <th align="center">สถานะ</th>
                                                <th align="center">วันที่นำสินค้าเข้า</th>
                                                <th align="center">วันที่สร้างรายการ</th>
                                                <th align="center">เครื่องมือ</th>
                                               
                                            </tr>
                                        </thead>
                                        
                                    </table>

                                </div>
                            </div>
                        </div>
                       
                    </div>
                    <!-- /.box-body -->
                </div>
            </div>
        </div>
    </div>
</div>