@using Kemrex.Core.Database.Models
@using Kemrex.Web.Common.Controllers
@using Kemrex.Web.Common.Models
@model List<TblCustomer>
@{
    ViewBag.Title = "Index";
    KemrexController kemrex = ((KemrexController)this.ViewContext.Controller);
    Layout = kemrex.PathViewShared("_lyDefault");
    WidgetAlertModel Alert = (WidgetAlertModel)ViewBag.Alert;
    WidgetPaginationModel Pagination = (WidgetPaginationModel)ViewBag.Pagination;
}

@section Scripts {
    <script type="text/javascript">
          var url = '@Url.Action("GetList", "Customer")';
        var isMobile = IsMobile();
        $(document).ready(function () {
            window.setTimeout(function () {
                $(".alert").fadeTo(1000, 0).slideUp(1000, function () {
                    $(this).remove();
                });
            }, 5000);

            if (!isMobile) {
                waitingDialog.show('Waiting for loading data', { dialogSize: 'md', progressType: 'primary' });
            }

            LoadTable();


            $(BasicMenu).slideToggle();

              function LoadTable() {

            var html = '';
            var criteria = "";
           var urlDetail='@Url.Action("Detail", new { controller = "Customer", area = ""})';
              $(".divDetail").empty();

              if (isMobile) {

                  html += '<table class="table table-hover" >';
                  html += '<thead>';
                  html += '<tr class="">';
                  html += '<th></th>';
                  html += '</tr>';
                  html += '</thead>';

                  $.ajax({
                      url: url,
                      type: "POST",
                      // data: JSON.stringify(criteria),
                      dataType: "json",
                      contentType: "application/json; charset=utf-8",
                      success: function (data) {
                          html += '<tbody>';
                          if (data != null && data.length > 0) {

                              $.each(data, function (index, item) {
                                  html += '<tr>';
                                  html += '<td>'
                                  html += '<div class="">'
                                  html += '<div class="content">'
                                  html += '<div class="row" >';
                                  html += '<div class="col-sm-5">';
                                  html += '<div class="icon-big text-center">';

                                  html += '</div>';
                                  html += '</div>';
                                  html += '<div class="col-sm-10">';
                                  html += '<div>';
                                  html += '<div class="col-sm-12"><div class="textrow"><div class="text-primary"><b>ชื่อลุกค้า</b></div> : <div class="text-default">' + item.CustomerName + '</div></div></div>';
                                  html += '<div class="col-sm-12"><div class="textrow"><div class="text-primary"><b>เบอร์โทร</b></div> : ' + item.CustomerPhone + '</div></div>';
                                  html += '<div class="col-sm-12"><div class="textrow"><div class="text-primary"><b>อีเมล์</b></div> : ' + item.CustomerEmail  + '</div></div>';
               
                                  html += '<div> <a href="' + urlDetail + '/' + item.CustomerId + '" class="btn btn-md btn-floating btn-primary">';
                                  html += '<i class=" fa fa-pencil " aria-hidden="true"></i></a></div>';
                                  html += '</div>';
                                  html += '</div>';
                                  html += '</div>';

                                  html += '</div>';
                                  html += '</td>'
                                  html += '</tr>';
                              });
                          }
                          html += '</tbody>';

                          html += ' </table>';

                          $(".divDetail").append(html);
                          $(".divDetail table").DataTable();


                      }
                  });

              } else {
                  html += '<table class="table  table-striped table-hover "  >';
                  html += '<thead>';
                  html += '<tr class="table-primary" >';
                  html += ' <th>ชื่อ</th>';
                  html += '<th>เบอร์โทร</th>';
                  html += '<th>อีเมล์</th>';
                  html += '<th>เครื่องมือ</th>';
                  html += '</tr>';
                  html += '</thead>';
                  html += '<tbody>';



                  $.ajax({
                      url: url,
                      type: "POST",
                      // data: JSON.stringify(criteria),
                      dataType: "json",
                      contentType: "application/json; charset=utf-8",
                      success: function (data) {


                          if (data != null) {

                              $.each(data, function (index, item) {
                                  html += '<tr>';
                                  html += '<td>' + item.CustomerName + '</td>';
                                  html += '<td>' + item.CustomerPhone + '</td>';
                                  html += '<td>' + item.CustomerEmail + '</td>';

                                  html += '<td> <a href="' + urlDetail + '/' + item.CustomerId + '" class="btn btn-xs  btn-primary">';
                                  html += '<i class=" fa fa-pencil" aria-hidden="true"></i>&nbsp;แก้ไข </a>&nbsp;';
                                  // html += '<a href="' + urlExport + '/' + item.JobOrderId + '" class="btn btn-xs btn-warning">';
                                  html += '</tr>';
                              });
                          }



                          html += '</tbody>';
                          html += ' </table>';

                          $(".divDetail").append(html);
                          var table = $(".divDetail table").DataTable(
                              {
                                  columnDefs: [

                                  ],
                                  order: [[1, 'asc']]
                              }
                          );


                          window.setTimeout(function () {
                              waitingDialog.hide();
                          }, 2000);

                      },
                      error: function (error) {
                          alert(error);
                          window.setTimeout(function () {
                              waitingDialog.hide();
                          }, 2000);
                          //  waitingDialog.hide();
                      }
                  });

              }




        }


        });
    </script>
}

<div class="page">
    <div class="page-header">
        <h1 class="page-title">ลูกค้า</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", new { controller = "Home", area = "" })" })">หน้าแรก</a></li>
            <li class="breadcrumb-item"><a href="javascript:void(0)">ฝ่ายขาย</a></li>
            <li class="breadcrumb-item active">ลูกค้า</li>
        </ol>
    </div>

    <div class="page-content container-fluid">
        <div class="row">
            <div class="col-12">
                @if (ViewBag.Alert != null)
                {
                    @Html.Partial(kemrex.PathViewShared("_wgAlert"), Alert)
                }
                <div class="panel">
                    <div class="panel-heading">
                        <h3 class="panel-title">ลูกค้า&nbsp;<a href="@Url.Action("Detail", new { area = "", controller = "Customer" })" class="btn btn-xs btn-primary" style="color:white;">เพิ่มข้อมูล</a></h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="panel-body dataTables_wrapper">
                       
                        <div class="row">
                            <div class="col-12">
                                <div class="table-responsive divDetail">
                                    <table class="table table-bordered table-hover">
                                        <thead>
                                            <tr>
                                                <th>ชื่อ</th>
                                                <th>เบอร์โทร</th>
                                                <th>อีเมล์</th>
                                                <th>เครื่องมือ</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @if (Model.Count() <= 0)
                                            {
                                                <tr>
                                                    <td colspan="4">ไม่พบข้อมูล</td>
                                                </tr>
                                            }
                                            @foreach (var ob in Model)
                                            {
                                                <tr>
                                                    <td>@ob.CustomerName</td>
                                                    <td>@ob.CustomerPhone</td>
                                                    <td>@ob.CustomerEmail</td>
                                                    <td>
                                                        <a href="@Url.Action("Detail", new { controller = "Customer", area = "", id = ob.CustomerId })"
                                                           class="btn btn-xs btn-primary">
                                                            <i class="fa fa-pencil" aria-hidden="true"></i>&nbsp;แก้ไข
                                                        </a>
                                                        <form method="post" action="@Url.Action("Delete", new { controller = "Customer", area = "" })"
                                                              class="fnc-delete inline-block">
                                                            <input type="hidden" name="CustomerId" value="@ob.CustomerId" />
                                                            @Html.AntiForgeryToken()
                                                            <button type="submit" class="btn btn-danger btn-xs"><i class="fa fa-trash" aria-hidden="true"></i>&nbsp;ลบ</button>
                                                        </form>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                     
                    </div>
                    <!-- /.box-body -->
                </div>
            </div>
        </div>
    </div>
</div>