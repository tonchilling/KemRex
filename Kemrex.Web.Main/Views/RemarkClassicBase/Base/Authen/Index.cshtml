@using Kemrex.Core.Common.Helper
@using Kemrex.Web.Common.Controllers
@using Kemrex.Web.Common.Models
@{
    Layout = null;
    KemrexController kemrex = ((KemrexController)ViewContext.Controller);
    WidgetAlertModel AlertModel = (WidgetAlertModel)ViewBag.Alert;
}

<!DOCTYPE html>
<html  lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0, minimal-ui">
    <meta name="description" content="bootstrap admin template">
    <meta name="author" content="">

    <title>KEMREX: Login</title>

    <link rel="apple-touch-icon" href="~/images/apple-touch-icon.png" />
    <link rel="shortcut icon" href="~/images/favicon.ico" />

    <!-- Stylesheets -->
    <link rel="stylesheet" href="~/themes/@kemrex.GetCurrentTheme()/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/themes/@kemrex.GetCurrentTheme()/css/bootstrap-extend.min.css" />
    <link rel="stylesheet" href="~/themes/@kemrex.GetCurrentTheme()/css/site.min.css" />


    <!--  <link rel="stylesheet" href="~/themes/@kemrex.GetCurrentTheme()/libs/animsition/animsition.min.css" />-->
    <link rel="stylesheet" href="~/themes/@kemrex.GetCurrentTheme()/libs/jquery-asscrollable/jquery-asScrollable.min.css" />

    <link rel="stylesheet" href="~/libs/switchery/switchery.min.css" />
    <link rel="stylesheet" href="~/themes/@kemrex.GetCurrentTheme()/libs/jquery-slidepanel/jquery-slidePanel.min.css" />
    <link rel="stylesheet" href="~/libs/flag-icon-css/flag-icon.min.css" />
    <link rel="stylesheet" href="~/themes/@kemrex.GetCurrentTheme()/css/login.min.css" />

    <!-- Fonts -->
    <link rel="stylesheet" href="~/fonts/font-awesome/font-awesome.min.css" />
    <link rel="stylesheet" href="~/fonts/brand-icons/brand-icons.min.css" />
    <link rel="stylesheet" href="~/fonts/web-icons/web-icons.min.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Sarabun:300,400,500,300italic" />

    <!--[if lt IE 9]>
    <script src="~/libs/html5shiv/html5shiv.min.js"></script>
    <![endif]-->
    <!--[if lt IE 10]>
    <script src="~/libs/media-match/media.match.min.js"></script>
    <script src="~/libs/respond/respond.min.js"></script>
    <![endif]-->
    <!-- Scripts -->
    <script src="~/themes/@kemrex.GetCurrentTheme()/libs/breakpoints/breakpoints.min.js"></script>
    <script>Breakpoints();</script>
</head>
<body class="animsition page-login layout-full">
    <!--[if lt IE 8]>
        <p class="browserupgrade">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.</p>
    <![endif]-->
    <!-- Page -->
    <div class="page vertical-align text-center" data-animsition-in="fade-in" data-animsition-out="fade-out">
        >
        <div class="page-content vertical-align-middle animation-slide-top animation-duration-1">
            <div class="panel">
                <div class="panel-body">
                    <div class="brand mb-20">
                        <img class="brand-img" src="~/images/logo-banner.png" alt="KEMREX">
                        @*<h2 class="brand-text font-size-18">System Management</h2>*@
                    </div>
                    @if (AlertModel != null)
                    {
                        @Html.Partial(kemrex.PathViewShared("_wgAlert"), AlertModel)
                    }
                    <form method="post" action="@kemrex.UrlAction(PathHelper.SignIn)">
                        @Html.AntiForgeryToken()
                        <div class="form-group form-material floating" data-plugin="formMaterial">
                            <input type="text" class="form-control" name="username" autocomplete="off" />
                            <label class="floating-label">ชื่อบัญชี/อีเมล์</label>
                        </div>
                        <div class="form-group form-material floating" data-plugin="formMaterial">
                            <input type="password" class="form-control" name="password" autocomplete="off" />
                            <label class="floating-label">รหัสผ่าน</label>
                        </div>
                        <div class="form-group clearfix">
                            <div class="checkbox-custom checkbox-inline checkbox-primary checkbox-lg float-left">
                                <input type="checkbox" id="inputCheckbox" name="remember" value="Y" />
                                <label for="inputCheckbox">จดจำการเข้าสู่ระบบ</label>
                            </div>
                            @*<a class="float-right" href="forgot-password.html">Forgot password?</a>*@
                        </div>
                        <button type="submit" class="btn btn-primary btn-block btn-lg mt-40">เข้าสู่ระบบ</button>
                    </form>
                    @*<p>Still no account? Please go to <a href="register-v3.html">Sign up</a></p>*@
                </div>
            </div>

            <footer class="page-copyright page-copyright-inverse">
                <p>Copyright &copy; 2018 - @DateTime.Now.ToString("yyyy") Sutee Group Co., Ltd. All Rights Reserved.</p>
                <p>Powered by <a href="https://www.aitechnovation.com" target="_blank">AiTechnovation Co., Ltd.</a></p>
                @*<div class="social">
                        <a class="btn btn-icon btn-pure" href="https://twitter.com/kemrex_prefab" target="_blank">
                            <i class="icon bd-twitter" aria-hidden="true"></i>
                        </a>
                        <a class="btn btn-icon btn-pure" href="https://www.facebook.com/Kemrexfanpage/" target="_blank">
                            <i class="icon bd-facebook" aria-hidden="true"></i>
                        </a>
                    </div>*@
            </footer>
        </div>
    </div>
    <!-- End Page -->
    <!-- Core  -->
    <script src="~/themes/@kemrex.GetCurrentTheme()/libs/babel-external-helpers/babel-external-helpers.min.js"></script>
    <script src="~/libs/jquery/jquery.min.js"></script>
    <script src="~/libs/popper-js/popper.min.js"></script>
    <script src="~/libs/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/themes/@kemrex.GetCurrentTheme()/libs/animsition/animsition.min.js"></script>
    <script src="~/libs/jquery-mousewheel/jquery.mousewheel.min.js"></script>
    <script src="~/themes/@kemrex.GetCurrentTheme()/libs/jquery-asscrollbar/jquery-asScrollbar.min.js"></script>
    <script src="~/themes/@kemrex.GetCurrentTheme()/libs/jquery-asscrollable/jquery-asScrollable.min.js"></script>
    <script src="~/themes/@kemrex.GetCurrentTheme()/libs/jquery-ashoverscroll/jquery-asHoverScroll.min.js"></script>

    <!-- Plugins -->
    <script src="~/libs/switchery/switchery.min.js"></script>
    <script src="~/libs/screenfull/screenfull.min.js"></script>
    <script src="~/themes/@kemrex.GetCurrentTheme()/libs/jquery-slidepanel/jquery-slidePanel.min.js"></script>
    <script src="~/themes/@kemrex.GetCurrentTheme()/libs/jquery-placeholder/jquery.placeholder.min.js"></script>

    <!-- Scripts -->
    <script src="~/themes/@kemrex.GetCurrentTheme()/js/Component.js"></script>
    <script src="~/themes/@kemrex.GetCurrentTheme()/js/Plugin.js"></script>
    <script src="~/themes/@kemrex.GetCurrentTheme()/js/Base.js"></script>
    <script src="~/themes/@kemrex.GetCurrentTheme()/js/Config.js"></script>

    <script src="~/themes/@kemrex.GetCurrentTheme()/js/Section/bundle.min.js"></script>
    <script src="~/themes/@kemrex.GetCurrentTheme()/js/Plugin/menu.min.js"></script>

    <!-- Page -->
    <script src="~/themes/@kemrex.GetCurrentTheme()/js/Site.js"></script>
    <script src="~/themes/@kemrex.GetCurrentTheme()/js/Plugin/material.min.js"></script>

    <script type="text/javascript">
        (function (document, window, $) {
            'use strict';

            var Site = window.Site;
            $(document).ready(function () {
            //    Site.run();
            });
        })(document, window, jQuery);

        $(document).ready(function () {
            window.setTimeout(function () {
                $(".alert").fadeTo(1000, 0).slideUp(1000, function () {
                    $(this).remove();
                });
            }, 5000);
        });
    </script>
</body>
</html>