@using Kemrex.Core.Database.Models
@using Kemrex.Web.Common.Controllers
@using Kemrex.Web.Common.Models

@model List<TblSaleOrder>
@{
    ViewBag.Title = "Index";
    KemrexController kemrex = ((KemrexController)this.ViewContext.Controller);
    Layout = kemrex.PathViewShared("_lyDefault");
    WidgetAlertModel Alert = (WidgetAlertModel)ViewBag.Alert;
    WidgetPaginationModel Pagination = (WidgetPaginationModel)ViewBag.Pagination;
    Pagination.Controller = "SaleOrder";
}

@section Scripts {
    <script type="text/javascript">
        var url = '@Url.Action("GetList", "SaleOrder")';
        var isMobile = IsMobile();
        $(document).ready(function () {
            window.setTimeout(function () {
                $(".alert").fadeTo(1000, 0).slideUp(1000, function () {
                    $(this).remove();
                });
            }, 5000);

            if (!isMobile) {
                waitingDialog.show('Waiting for loading data', { dialogSize: 'md', progressType: 'primary' });
            }
            LoadTable();
        });


         function LoadTable() {

            var html = '';
            var criteria = "";
            var urlExport ='@Url.Action("PDFSaleOrder", new { controller = "export", area = ""})';
             var urlDetail='@Url.Action("Detail", new { controller = "SaleOrder", area = ""})';
             $(".divDetail").empty();



             if (isMobile) {

                 html += '<table class="table table-hover" >';
                 html += '<thead>';
                 html += '<tr class="">';
                 html += '<th></th>';
                 html += '</tr>';
                 html += '</thead>';
                 $.ajax({
                     url: url,
                     type: "POST",
                     // data: JSON.stringify(criteria),
                     dataType: "json",
                     contentType: "application/json; charset=utf-8",
                     success: function (data) {
                         html += '<tbody>';
                         if (data != null && data.length > 0) {

                             $.each(data, function (index, item) {
                                 html += '<tr>';
                                 html += '<td>'
                                 html += '<div class="">'
                                 html += '<div class="content">'
                                 html += '<div class="row" >';
                                 html += '<div class="col-sm-5">';
                                 html += '<div class="icon-big text-center">';

                                 html += '</div>';
                                 html += '</div>';
                                 html += '<div class="col-sm-10">';
                                 html += '<div>';
                                 html += '<div class="col-sm-12"><div class="textrow"><div class="text-primary"><b>เลขที่ใบสั่งขาย</b></div> : <div class="text-default">' + item.SaleOrderNo + '</div></div></div>';
                                 html += '<div class="col-sm-12"><div class="textrow"><div class="text-primary"><b>เลขที่ใบสั่งสินค้า</b></div> : <div class="text-default">' + item.QuotationNo + '</div></div></div>';
                                 html += '<div class="col-sm-12"><div class="textrow"><div class="text-primary"><b>ลูกค้า</b></div>  : ' + item.CustomerName + '</div></div>';
                                 html += '<div class="col-sm-12"><div class="textrow"><div class="text-primary"><b>ยอดเงิน</b></div> : ' + numeral(item.SummaryTot - item.DiscountCash).format('0,0.00') + '</div></div>';
                                 html += '<div div class="col-sm-12"><div class="textrow"><div class="text-primary"><b>วันที่</b></div> : ' + item.SaleOrderDate + '</div></div>';
                                 html += '<div> <a href="' + urlDetail + '/' + item.SaleOrderId + '" class="btn btn-md btn-floating' + (item.StatusId <= 1 ? " btn-default" : " btn-success") + '">';
                                 html += '<i class=" ' + (item.StatusId <= 1 ? "fa fa-pencil" : "fa fa-search") + '" aria-hidden="true"></i></a>';

                                
                                 html += '<a href="' + urlExport + '/' + item.SaleOrderId + '" target="_blank" class="btn  btn-md btn-floating btn-warning">';

                                 html += '<i class="fa fa-file-pdf-o" aria-hidden="true"></i> </a></div>';
                                 html += '</div>';
                                 html += '</div>';
                                 html += '</div>';

                                 html += '</div>';
                                 html += '</td>'
                                 html += '</tr>';
                             });
                         }
                         html += '</tbody>';

                         html += ' </table>';

                         $(".divDetail").append(html);
                         $(".divDetail table").DataTable(
                             { searching: false, paging: true, info: false }
                         );

                         window.setTimeout(function () {
                             waitingDialog.hide();

                             $(".modal-backdrop").remove();

                         }, 2000);

                         waitingDialog.hide();
                     }
                 });

             }
             else {


                 html += '<table class="table  table-striped table-hover "  >';
                 html += '<thead>';
                 html += '<tr class="table-primary" >';
                 html += '<th>หมายเลข</th>';
                 html += '<th>ลูกค้า</th>';
                 html += '<th>ใบเสนอราคา</th>';
                 html += '<th>ยอดเงิน</th>';
                 html += '<th>วันที่เอกสาร</th>';
                 html += '<th>สถานะ</th>';
                 html += '<th>ผู้สร้าง</th>';
                 html += '<th>เครื่องมือ</th>';
                 html += '</tr>';

                 html += ' </tr>';
                 html += '</thead>';
                 html += '<tbody>';



                 $.ajax({
                     url: url,
                     type: "POST",
                     // data: JSON.stringify(criteria),
                     dataType: "json",
                     contentType: "application/json; charset=utf-8",
                     success: function (data) {


                         if (data != null) {

                             $.each(data, function (index, item) {
                                 html += '<tr>';
                                 html += '<td>' + item.SaleOrderNo + '</td>';
                                 html += '<td>' + item.CustomerName + '</td>';
                                 html += '<td>' + (item.QuotationNo != null ? item.QuotationNo : "") + '</td>';
                                 html += '<td>' + numeral(item.SummaryTot - item.DiscountCash).format('0,0.00') + '</td>';
                                 html += '<td data-order="' + item.DSaleOrderDate + '">' + item.SaleOrderDate + '</td>';
                                 html += '<td>' + item.Status + '</td>';
                                 html += '<td>' + item.CreatedByName + '</td>';
                                 html += '<td> <a href="' + urlDetail + '/' + item.SaleOrderId + '" class="btn btn-xs ' + (item.StatusId <= 1 ? " btn-primary" : " btn-success") + '">';
                                 html += '<i class="fa glyphicon glyphicon-search" aria-hidden="true"></i>&nbsp;' + (item.StatusId <= 1 ? "แก้ไข" : "เรียกดู") + ' </a>&nbsp;';
                                 html += '<a href="' + urlExport + '/' + item.SaleOrderId + '" class="btn btn-xs btn-warning">';
                                 html += '<i class="fa fa-file-pdf-o" aria-hidden="true"></i>&nbsp;PDF </a></td>';



                                 html += '</tr>';
                             });
                         }



                         html += '</tbody>';
                         html += ' </table>';

                         $(".divDetail").append(html);
                         var table = $(".divDetail table").DataTable(
                             {
                                 columnDefs: [
                                     { type: 'date-uk', targets: 4 }
                                 ],
                                 order: [[4, 'desc']]
                             }
                         );


                         window.setTimeout(function () {
                             waitingDialog.hide();
                         }, 2000);

                     },
                     error: function (error) {
                         alert(error);
                         window.setTimeout(function () {
                             waitingDialog.hide();
                         }, 2000);
                         //  waitingDialog.hide();
                     }
                 });


             }
          

          
        }


        $(SaleMenu).slideToggle();
    </script>
}

<div class="page">
    <div class="page-header">
        <h1 class="page-title">รายการใบสั่งขาย / Sale order</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", new { controller = "Home", area = "" })" })">หน้าแรก</a></li>
            <li class="breadcrumb-item"><a href="javascript:void(0)">ฝ่ายขาย</a></li>
            <li class="breadcrumb-item active">ใบสั่งขาย</li>
        </ol>
    </div>
    <div class="page-content container-fluid">
        <div class="row">
            <div class="col-12">
                @if (ViewBag.Alert != null)
                {
                    @Html.Partial(kemrex.PathViewShared("_wgAlert"), Alert)
                }
                <div class="panel">
                    <div class="panel-heading">
                        <h3 class="panel-title">ใบสั่งขาย&nbsp;<a href="@Url.Action("Detail", new { area = "", controller = "SaleOrder" })" class="btn btn-xs btn-primary" style="color:white;">เพิ่มข้อมูล</a></h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="panel-body">
                        
                        <div class="row">
                            <div class="col-12">
                                <div class="table-responsive divDetail">
                                    <table class="table table-bordered table-hover">
                                        <thead>
                                            <tr align="center">
                                                <th>หมายเลข</th>
                                                <th>ลูกค้า</th>
                                                <th>ใบเสนอราคา</th>
                                                <th>ยอดเงิน</th>
                                                <th>วันที่เอกสาร</th>
                                                <th>สถานะ</th>
                                                <th>เครื่องมือ</th>
                                            </tr>
                                        </thead>
                                     
                                    </table>
                            
                                </div>
                            </div>
                        </div>
                     
                    </div>
                    <!-- /.box-body -->
                </div>
            </div>
        </div>
    </div>
</div>