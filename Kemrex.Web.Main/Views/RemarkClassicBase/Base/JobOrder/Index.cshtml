@using Kemrex.Core.Database.Models
@using Kemrex.Web.Common.Controllers
@using Kemrex.Web.Common.Models
@using Kemrex.Core.Common.Helper
@model List<TblJobOrder>
@{
    ViewBag.Title = "Index";
    KemrexController kemrex = ((KemrexController)this.ViewContext.Controller);
    Layout = kemrex.PathViewShared("_lyDefault");
    WidgetAlertModel Alert = (WidgetAlertModel)ViewBag.Alert;
    WidgetPaginationModel Pagination = (WidgetPaginationModel)ViewBag.Pagination;
}

@section Scripts {
    <script type="text/javascript">
         var url = '@Url.Action("GetList", "JobOrder")';
        $(document).ready(function () {
            waitingDialog.show('Waiting for loading data', { dialogSize: 'md', progressType: 'primary' });
            LoadTable();
            window.setTimeout(function () {
                $(".alert").fadeTo(1000, 0).slideUp(1000, function () {
                    $(this).remove();
                });

             
            }, 5000);
        });


          function LoadTable() {

            var html = '';
            var criteria = "";
            var urlExport ='@Url.Action("PDFJobOrder", new { controller = "export", area = ""})';
             var urlDetail='@Url.Action("Detail", new { controller = "JobOrder", area = ""})';
            $(".divDetail").empty();
            html += '<table class="table  table-striped table-hover "  >';
            html += '<thead>';
              html += '<tr class="table-primary" >';
              html += '<th>เลขที่ใบสั่งงาน</th>';
              html += '<th>ชื่องาน</th>';
              html += '<th>ลูกค้า</th>';
             html += '<th>วันที่</th>';
              html += '<th>สถานะ</th>';
              html += '<th>ผู้สร้าง</th>';
            html += '<th>เครื่องมือ</th>';
            html += '</tr>';

            html += ' </tr>';
            html += '</thead>';
            html += '<tbody>';


           
            $.ajax({
                url: url,
                type: "POST",
               // data: JSON.stringify(criteria),
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                success: function (data) {
                       
                      
                        if (data != null) {

                            $.each(data, function (index, item) {
                                html += '<tr>';
                                html += '<td>' + item.JobOrderNo + '</td>';
                                html += '<td>' + item.JobName + '</td>';
                                html += '<td>' + item.CustomerName + '</td>';
                                html += '<td>' + item.StartDateToString + '</td>';
                                html += '<td>' + item.Status + '</td>';
                                html += '<td>' + item.CreatedByName + '</td>';
                                html += '<td> <a href="' + urlDetail + '/' + item.JobOrderId + '" class="btn btn-xs ' + (item.StatusId <=2? " btn-primary" : " btn-success") +'">';
                                html += '<i class=" ' + (item.StatusId <= 2 ? "fa fa-pencil" :"glyphicon glyphicon-search") + '" aria-hidden="true"></i>&nbsp;' + (item.StatusId<=2? "แก้ไข":"เรียกดู") +' </a>&nbsp;';
                                html += '<a href="' + urlExport + '/' + item.JobOrderId + '" class="btn btn-xs btn-warning">';
                                html += '<i class="fa fa-file-pdf-o" aria-hidden="true"></i>&nbsp;PDF </a></td>';



                                html += '</tr>';
                            });
                        }

           

                    html += '</tbody>';
                    html += ' </table>';
                   
                    $(".divDetail").append(html);
                    var table = $(".divDetail table").DataTable(
                        {
                            columnDefs: [
                                { type: 'date-uk', targets: 3 }
                            ],
                            order: [[3, 'desc']]
                        }
                    );

                   
                    window.setTimeout(function () {
                        waitingDialog.hide();
                    }, 2000);
                  
                },
                error: function (error) {
                    alert(error);
                    window.setTimeout(function () {
                        waitingDialog.hide();
                    }, 2000);
                  //  waitingDialog.hide();
                }
            });


          
          

          
        }

        $(EngineerMenu).slideToggle();
    </script>
}

<div class="page">
    <div class="page-header">
        <h1 class="page-title">รายการใบสั่งงาน / Job order</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", new { controller = "Home", area = "" })" })">หน้าแรก</a></li>
            <li class="breadcrumb-item"><a href="javascript:void(0)">ฝ่ายติดตั้ง</a></li>
            <li class="breadcrumb-item active">ใบสั่งงาน</li>
        </ol>
    </div>
    <div class="page-content container-fluid">
        <div class="row">
            <div class="col-12">
                @if (ViewBag.Alert != null)
                {
                    @Html.Partial(kemrex.PathViewShared("_wgAlert"), Alert)
                }
                <div class="panel">
                    <div class="panel-heading">
                        <h3 class="panel-title">ใบสั่งงาน&nbsp;<a href="@Url.Action("Detail", new { area = "", controller = "JobOrder" })" class="btn btn-xs btn-primary invisible" style="color:white;">เพิ่มข้อมูล</a></h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="panel-body dataTables_wrapper">
                      
                        <div class="row">
                            <div class="col-12">
                                <div class="table-responsive divDetail">
                                    <table class="table table-bordered table-hover">
                                        <thead>
                                            <tr align="center">
                                                <th>ชื่องาน</th>
                                                <th>หมายเลข</th>
                                                <th>ลงวันที่</th>
                                                <th>สถานะ</th>
                                                <th>เครื่องมือ</th>
                                            </tr>
                                        </thead>
                                       
                                    </table>

                                </div>
                            </div>
                        </div>
                  
                    </div>
                    <!-- /.box-body -->
                </div>
            </div>
        </div>
    </div>
</div>