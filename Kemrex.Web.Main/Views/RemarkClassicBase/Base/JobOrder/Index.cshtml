@using Kemrex.Core.Database.Models
@using Kemrex.Web.Common.Controllers
@using Kemrex.Web.Common.Models

@model List<TblSaleOrder>
@{
    ViewBag.Title = "Index";
    KemrexController kemrex = ((KemrexController)this.ViewContext.Controller);
    Layout = kemrex.PathViewShared("_lyDefault");
    WidgetAlertModel Alert = (WidgetAlertModel)ViewBag.Alert;
    WidgetPaginationModel Pagination = (WidgetPaginationModel)ViewBag.Pagination;
}

@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            window.setTimeout(function () {
                $(".alert").fadeTo(1000, 0).slideUp(1000, function () {
                    $(this).remove();
                });
            }, 5000);
        });
    </script>
}

<div class="page">
    <div class="page-header">
        <h1 class="page-title">รายการใบสั่งงาน / Job order</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", new { controller = "Home", area = "" })" })">หน้าแรก</a></li>
            <li class="breadcrumb-item"><a href="javascript:void(0)">ฝ่ายติดตั้ง</a></li>
            <li class="breadcrumb-item active">ใบสั่งงาน</li>
        </ol>
    </div>
    <div class="page-content container-fluid">
        <div class="row">
            <div class="col-12">
                @if (ViewBag.Alert != null)
                {
                    @Html.Partial(kemrex.PathViewShared("_wgAlert"), Alert)
                }
                <div class="panel">
                    <div class="panel-heading">
                        <h3 class="panel-title">ใบสั่งงาน&nbsp;<a href="@Url.Action("Detail", new { area = "", controller = "JobOrder" })" class="btn btn-xs btn-primary" style="color:white;">เพิ่มข้อมูล</a></h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="panel-body dataTables_wrapper">
                        <div class="row">
                            <div class="col-12 col-sm-6 form-inline">
                                @Html.Partial(kemrex.PathViewShared("_wgPaginationSize"), Pagination)
                            </div>
                            <div class="col-12 col-sm-6">
                                <div class="dataTables_paginate float-right">
                                    @Html.Partial(kemrex.PathViewShared("_wgPagination"), Pagination)
                                </div>
                                <div class="clear"></div>
                            </div>
                            <br /><br />
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <div class="table-responsive">
                                    <table class="table table-bordered table-hover">
                                        <thead>
                                            <tr align="center">
                                                <th>ชื่องาน</th>
                                                <th>หมายเลข</th>
                                                <th>ลงวันที่</th>
                                                <th>สถานะ</th>
                                                <th>เครื่องมือ</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @if (Model.Count() <= 0)
                                            {
                                                <tr>
                                                    <td colspan="5">ไม่พบข้อมูล</td>
                                                </tr>
                                            }
                                            @foreach (var ob in Model)
                                            {
                                                var total = ob.SummaryTot - ob.DiscountCash;
                                                <tr id="@ob.StatusId"
                                                    @if (ob.StatusId == 1) { @Html.Raw("class=\"table-light text-primary\"")  } else if (ob.StatusId == 2) { @Html.Raw("class=\"table-primary text-success\"")  } else if (ob.StatusId == 3) { @Html.Raw("class=\"table-dark text-white\"") }>
                                                    <td>@ob.CustomerName</td>
                                                    <td>@ob.SaleOrderNo</td>
                                                    <td align="center">@ob.CreatedDate</td>
                                                    <td align="center">
                                                        @{ if (ob.StatusId == 1)
                                                            {
                                                                @("เปิด");
                                                            }
                                                            else if (ob.StatusId == 2)
                                                            {
                                                                @("ปิด");
                                                            }
                                                            else
                                                            {
                                                                @("ยกเลิก");
                                                            }
                                                        }
                                                    </td>
                                                    <td align="center">
                                                        <a href="@Url.Action("Detail", new { controller="JobOrder" , area="" , id=ob.SaleOrderId })"
                                                           class="btn btn-xs btn-primary">
                                                            <i class="fa fa-pencil" aria-hidden="true"></i>&nbsp;แก้ไข
                                                        </a>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>

                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12 col-sm-6">
                                <span>@Pagination.CurrentDisplay</span>
                            </div>
                            <div class="col-12 col-sm-6">
                                <div class="dataTables_paginate float-right">
                                    @Html.Partial(kemrex.PathViewShared("_wgPagination"), Pagination)
                                </div>
                                <div class="clear"></div>
                            </div>
                        </div>
                    </div>
                    <!-- /.box-body -->
                </div>
            </div>
        </div>
    </div>
</div>