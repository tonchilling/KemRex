@using Kemrex.Core.Database.Models
@using Kemrex.Web.Common.Controllers
@using Kemrex.Web.Common.Models
@using Kemrex.Core.Common.Helper
@*@model List<TransferStockHeader>*@
@{
    ViewBag.Title = "Index";
    KemrexController kemrex = ((KemrexController)this.ViewContext.Controller);
    Layout = kemrex.PathViewShared("_lyDefault");
    WidgetAlertModel Alert = (WidgetAlertModel)ViewBag.Alert;
    //WidgetPaginationModel Pagination = (WidgetPaginationModel)ViewBag.Pagination;

}

@section Scripts {
    <script type="text/javascript">
        var url = '@Url.Action("GetTransferStockInList", "TransferStockIn")';
        var isMobile = IsMobile();
        $(document).ready(function () {
            window.setTimeout(function () {
                $(".alert").fadeTo(1000, 0).slideUp(1000, function () {
                    $(this).remove();
                });
            }, 5000);

            if (!isMobile)
            waitingDialog.show('Waiting for loading data', { dialogSize: 'md', progressType: 'primary' });
            
            LoadTable();
            
        });

        $(StockMenu).slideToggle();

        function LoadTable() {

            var html = '';
            var criteria = "";
            var urlDetail = '@Url.Action("Detail", new { controller = "TransferStockIn", area = ""})';
            $(".divDetail").empty();


            if (isMobile) {

                html += '<table class="table table-hover" >';
                html += '<thead>';
                html += '<tr class="">';
                html += '<th></th>';
                html += '</tr>';
                html += '</thead>';
                $.ajax({
                    url: url,
                    type: "POST",
                    // data: JSON.stringify(criteria),
                    dataType: "json",
                    contentType: "application/json; charset=utf-8",
                    success: function (data) {
                        html += '<tbody>';
                        if (data != null && data.length > 0) {

                            $.each(data, function (index, item) {
                                html += '<tr>';
                                html += '<td>'
                                html += '<div class="">'
                                html += '<div class="content">'
                                html += '<div class="row" >';
                                html += '<div class="col-sm-5">';
                                html += '<div class="icon-big text-center">';

                                html += '</div>';
                                html += '</div>';
                                html += '<div class="col-sm-10">';
                                html += '<div>';
                                html += '<div class="col-sm-12"><div class="textrow"><div class="text-primary"><b>เลขที่นำเข้าสินค้า</b></div> : <div class="text-default">' + item.TransferNo + '</div></div></div>';
                                html += '<div class="col-sm-12"><div class="textrow"><div class="text-primary"><b>เลขที่อ้างอิง/เลขที่ใบเสร็จ</b></div>  : ' + item.BillNo + '</div></div>';
                                html += '<div class="col-sm-12"><div class="textrow"><div class="text-primary"><b>ผู้นำสินค้าเข้า</b></div> : ' + item.Employee.EmpNameTh + '</div></div>';
                                html += '<div class="col-sm-12"><div class="textrow"><div class="text-primary"><b>วันที่นำสินค้าเข้า</b></div> : ' + item.StrTransferDate + '</div></div>';
                                html += '<div class="col-sm-12"><div class="textrow"><div class="text-primary"><b>วันที่สร้างรายการ</b></div> : ' + item.StrCreateDate + '</div></div>';

                                if (item.TransferStatus == 0) {
                                    statusName = "ร่าง";
                                } else if (item.TransferStatus == 1) {
                                    statusName = "ส่งแล้ว";
                                }

                                html += '<div class="col-sm-12"><div class="textrow"><div class="text-primary"><b>สถานะ</b></div> : ' + statusName + '</div></div>';
                                html += '<div> <a href="' + urlDetail + '/' + item.TransferStockId + '" class="btn btn-md btn-floating' + (item.TransferStatus <= 0 ? " btn-primary" : " btn-success") + '">';
                                html += '<i class=" ' + (item.TransferStatus <= 0 ? "fa fa-pencil" : "fa fa-search") + '" aria-hidden="true"></i></a></div>';
                               // html += '<a href="' + urlExport + '/' + item.TransferId + '" target="_blank" class="btn  btn-md btn-floating btn-warning">';

                               // html += '<i class="fa fa-file-pdf-o" aria-hidden="true"></i> </a></div>';
                                html += '</div>';
                                html += '</div>';
                                html += '</div>';

                                html += '</div>';
                                html += '</td>'
                                html += '</tr>';
                            });
                        }
                        html += '</tbody>';

                        html += ' </table>';

                        $(".divDetail").append(html);
                        $(".divDetail table").DataTable();


                    }
                });

            }
            else {

                html += '<table class="table  table-striped table-hover "  >';
                html += '<thead>';
                html += '<tr class="table-primary" >';
                html += '<th align="center">เลขที่นำเข้าสินค้า</th>';
                html += '<th align="center">เลขที่อ้างอิง/เลขที่ใบเสร็จ</th>';
                html += '<th align="center">ผู้นำสินค้าเข้า</th>';
                html += '<th align="center">สถานะ</th>';
                html += '<th align="center">วันที่นำสินค้าเข้า</th>';
                html += '<th align="center">วันที่สร้างรายการ</th>';
                html += '<th align="center">เครื่องมือ</th>';
                html += ' </tr>';
                html += '</thead>';
                html += '<tbody>';



                $.ajax({
                    url: url,
                    type: "POST",
                    // data: JSON.stringify(criteria),
                    dataType: "json",
                    contentType: "application/json; charset=utf-8",
                    success: function (data) {

                        var statusName = "";
                        if (data != null) {

                            $.each(data, function (index, item) {
                                html += '<tr>';
                                html += '<td align="center">' + item.TransferNo + '</td>';
                                html += '<td>' + item.BillNo + '</td>';
                                html += '<td>' + item.Employee.EmpNameTh + '</td>';

                                if (item.TransferStatus == 0) {
                                    statusName = "ร่าง";
                                } else if (item.TransferStatus == 1) {
                                    statusName = "ส่งแล้ว";
                                }

                                html += '<td>' + statusName + '</td>';
                                html += '<td align="center">' + item.StrTransferDate + '</td>';
                                html += '<td align="center">' + item.StrCreateDate + '</td>';
                                html += '<td> <a href="' + urlDetail + '/' + item.TransferStockId + '" class="btn btn-xs btn-primary">';
                                html += '<i class="fa fa-pencil" aria-hidden="true"></i>&nbsp;แก้ไข </a>&nbsp;';
                                html += '</tr>';
                            });
                        }
                        html += '</tbody>';
                        html += ' </table>';

                        $(".divDetail").append(html);
                        $(".divDetail table").DataTable(
                            {
                                columnDefs: [
                                    { type: 'date-uk', targets: 4 }
                                ],
                                order: [[4, 'desc']]
                            }
                        );
                        window.setTimeout(function () {
                            waitingDialog.hide();
                        }, 2000);
                    },
                    error: function (error) {
                        alert(error);
                        waitingDialog.hide();
                        //  waitingDialog.hide();
                    }
                });
            }
        }
    </script>
}

