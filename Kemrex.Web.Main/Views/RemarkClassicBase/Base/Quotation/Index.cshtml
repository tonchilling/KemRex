@using Kemrex.Core.Database.Models
@using Kemrex.Web.Common.Controllers
@using Kemrex.Web.Common.Models

@model List<TblQuotation>
@{
    ViewBag.Title = "Index";
    KemrexController kemrex = ((KemrexController)this.ViewContext.Controller);
    Layout = kemrex.PathViewShared("_lyDefault");
    WidgetAlertModel Alert = (WidgetAlertModel)ViewBag.Alert;
    WidgetPaginationModel Pagination = (WidgetPaginationModel)ViewBag.Pagination;
    Pagination.Controller = "Quotation";
}

@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            window.setTimeout(function () {
                $(".alert").fadeTo(1000, 0).slideUp(1000, function () {
                    $(this).remove();
                });
            }, 5000);

            $(SaleMenu).slideToggle();
        });
    </script>
}

    <div class="page">
        <div class="page-header">
            <h1 class="page-title">รายการใบเสนอราคา / Quotation</h1>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="@Url.Action("Index", new { controller = "Home", area = "" })" })">หน้าแรก</a></li>
                <li class="breadcrumb-item"><a href="javascript:void(0)">ฝ่ายขาย</a></li>
                <li class="breadcrumb-item active">ใบเสนอราคา</li>
            </ol>
        </div>
        <div class="page-content container-fluid">
            <div class="row">
                <div class="col-12">
                    @if (ViewBag.Alert != null)
                    {
                        @Html.Partial(kemrex.PathViewShared("_wgAlert"), Alert)
                    }
                    <div class="panel">
                        <div class="panel-heading">
                            <h3 class="panel-title">ใบเสนอราคา&nbsp;<a href="@Url.Action("Detail", new { area = "", controller = "Quotation" })" class="btn btn-xs btn-primary" style="color:white;">เพิ่มข้อมูล</a></h3>
                        </div>
                        <!-- /.box-header -->
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-12 col-sm-6 form-inline">
                                    @Html.Partial(kemrex.PathViewShared("_wgPaginationSize"), Pagination)
                                </div>
                                <div class="col-12 col-sm-6">
                                    <div class="pull-right">
                                        @Html.Partial(kemrex.PathViewShared("_wgPagination"), Pagination)
                                    </div>
                                    <div class="clear"></div>
                                </div>
                                <br /><br />
                            </div>
                            <div class="row">
                                <div class="col-12">
                                    <div class="table-responsive">
                                        <table class="table table-bordered table-hover">
                                            <thead>
                                                <tr align="center">
                                                    <th>หมายเลข</th>
                                                    <th>ลูกค้า</th>
                                                    <th>ยอดเงิน</th>
                                                    <th>วันที่</th>
                                                    <th>สถานะ</th>
                                                    <th>เครื่องมือ</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @if (Model.Count() <= 0)
                                                {
                                                    <tr>
                                                        <td colspan="5">ไม่พบข้อมูล</td>
                                                    </tr>
                                                }
                                                @foreach (var ob in Model)
                                                {
                                                    var total = ob.SummaryTot - ob.DiscountCash;
                                                    <tr id="@ob.Status.StatusId"
                                                        @if (ob.Status.StatusId == 1) { @Html.Raw("class=\"table-light\"")  } else if (ob.Status.StatusId == 2) { @Html.Raw("class=\"table-primary text-dark\"")  } else if (ob.Status.StatusId == 3) { @Html.Raw("class=\"table-success\"")  } else if (ob.Status.StatusId == 4) { @Html.Raw("class=\"table-secondary\"")  }>
                                                        <td>@ob.QuotationNo</td>
                                                        <td>@ob.CustomerName</td>
                                                        <td align="right">@total</td>
                                                        <td>@ob.CreatedDate.ToString("dd/MM/yyyy HH:mm")</td>
                                                        <td align="center">@ob.Status.StatusName</td>
                                                        <td align="center">
                                                            <a href="@Url.Action("Detail", new { controller="Quotation" , area="" , id=ob.QuotationId })"
                                                               class="btn btn-xs btn-primary">
                                                                <i class="fa fa-pencil" aria-hidden="true"></i>&nbsp;แก้ไข
                                                            </a>
                                                            <a href="@Url.Action("PDFQuatation", new { controller = "export", area = "", id=ob.QuotationId  })"
                                                               class="btn btn-xs btn-warning">
                                                                <i class="fa fa-file-pdf-o" aria-hidden="true"></i>&nbsp;PDF 
                                                            </a>
                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>

                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12 col-sm-6">
                                    <span>@Pagination.CurrentDisplay</span>
                                </div>
                                <div class="col-12 col-sm-6">
                                    <div class="pull-right">
                                        @Html.Partial(kemrex.PathViewShared("_wgPagination"), Pagination)
                                    </div>
                                    <div class="clear"></div>
                                </div>
                            </div>
                        </div>
                        <!-- /.box-body -->
                    </div>
                </div>
            </div>
        </div>
    </div>