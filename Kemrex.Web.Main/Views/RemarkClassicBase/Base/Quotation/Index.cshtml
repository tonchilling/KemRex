@using Kemrex.Core.Database.Models
@using Kemrex.Web.Common.Controllers
@using Kemrex.Web.Common.Models

@model List<TblQuotation>
@{
    ViewBag.Title = "Index";
    KemrexController kemrex = ((KemrexController)this.ViewContext.Controller);
    Layout = kemrex.PathViewShared("_lyDefault");
    WidgetAlertModel Alert = (WidgetAlertModel)ViewBag.Alert;

}

<style type="text/css">

    .popover {
        min-width: 300px;
    }

    .popover-body {
        padding: 20px 4px;
        color: #76838f;
    }
    .list-group-item:hover, .list-group-item:focus {
        background-color: #ff6a00;
    }
    .list-group {
        margin-bottom: 4px;
    }
    .list-group-item {
        border: 1px solid #eee;
    }

    .btnViewQuoation {
        cursor: pointer;
        color: #808080;
    }
</style>


@section Scripts {
<script type="text/javascript">
          var url = '@Url.Action("GetList", "Quotation")';
        $(document).ready(function () {
            window.setTimeout(function () {
                $(".alert").fadeTo(1000, 0).slideUp(1000, function () {
                    $(this).remove();
                });
            }, 5000);


            waitingDialog.show('Waiting for loading data', { dialogSize: 'md', progressType: 'primary' });


            LoadTable();

            $(SaleMenu).slideToggle();
        });


        function LoadTable() {

            var html = '';
            var criteria = "";
            var urlExport ='@Url.Action("PDFQuotation", new { controller = "export", area = ""})';
            var urlDetail = '@Url.Action("Detail", new { controller = "Quotation", area = ""})';
               var urlClone='@Url.Action("Clone", new { controller = "Quotation", area = ""})';
            $(".divDetail").empty();
            html += '<table class="table  table-striped table-hover "  >';
            html += '<thead>';
            html += '<tr class="table-primary" >';
            html += '<th>หมายเลข</th>';
            html += '<th>ลูกค้า</th>';
            html += '<th>ยอดเงิน</th>';
            html += '<th>วันที่</th>';
            html += '<th>ใบเสนอราคาอ้างอิง</th>';
            html += '<th>สถานะ</th>';
            html += '<th>เครื่องมือ</th>';
            html += '</tr>';

            html += ' </tr>';
            html += '</thead>';
            html += '<tbody>';



            $.ajax({
                url: url,
                type: "POST",
               // data: JSON.stringify(criteria),
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                success: function (data) {


                        if (data != null) {

                            $.each(data, function (index, item) {
                                html += '<tr>';
                                html += '<td>' + item.QuotationNo + '</td>';
                                html += '<td>' + item.Customer.CustomerName + '</td>';
                                html += '<td>' + numeral(item.SummaryTot - item.DiscountCash).format('0,0.00')  + '</td>';
                                html += '<td>' + item.strQuotationDate + '</td>';

                                html += '<td>';

                                if (item.OrgQuotationId != null && item.OrgQuotationId != "") {
                                    html += '<button data="' + item.OrgQuotationId + '"  data-toggle="popover"';
                                    html += 'data-html="true" title = "ใบเสนอราคา" data - trigger="focus" class="btn btn-xs btn-danger btnViewOtherQuotation">';
                                    html += '<i class="glyphicon glyphicon-zoom-in" aria-hidden="true"></i>&nbsp; เรียกดู';
                                    html += '</button>&nbsp;';
                                }
                                html += '</td>'
                                html += '<td>' + item.Status.StatusName + '</td>';
                              //  html += '<td> <a href="' + urlDetail + '/' + item.QuotationId + '" class="btn btn-xs btn-primary">';
                                html += '<td> <a href="' + urlDetail + '/' + item.QuotationId + '" class="btn btn-xs ' + (item.StatusId <= 3 ? " btn-default" : " btn-success") + '">';
                                html += '<i class=" ' + (item.StatusId <= 3 ? "fa fa-pencil" : "glyphicon glyphicon-search") + '" aria-hidden="true"></i>&nbsp;' + (item.StatusId <= 3 ? "แก้ไข" : "เรียกดู") + ' </a>&nbsp;';

                                html += '<button data="' + item.QuotationId + '" class="btn btn-xs btn-primary btnClone">';
                                html += '<i class="fa fa-copy" aria-hidden="true"></i>&nbsp; คัดลอก';
                                html += '</button>&nbsp;';
                                html += '<a href="' + urlExport + '/' + item.QuotationId + '" class="btn btn-xs btn-warning">';

                                html += '<i class="fa fa-file-pdf-o" aria-hidden="true"></i>&nbsp;PDF </a></td>';



                                html += '</tr>';
                            });
                        }



                    html += '</tbody>';
                    html += ' </table>';

                    $(".divDetail").append(html);
                    $(".divDetail table").DataTable({
                        columnDefs: [
                            { type: 'date-uk', targets: 3 }
                        ],
                        order: [[3, 'desc']]
                    }
                    );
                    waitingDialog.hide();
                },
                error: function (error) {
                    alert(error);
                    waitingDialog.hide();
                  //  waitingDialog.hide();
                }
            });


            function GetQuotation(TblQuotationList) {

                var quotationNo = "";

                if (TblQuotationList != null && TblQuotationList.Length > 0) {
                    $.each(TblQuotationList, function (index, item) {

                        quotationNo = quotationNo + item.QuotationNo + ',';
                    });
                }

                if (quotationNo.Length > 0) {
                    quotationNo = quotationNo.substring(0, quotationNo.Length-1);
                }

                return quotationNo;

            }

            $(document).on("click", ".popover-header", function () {
                $(this).closest(".popover").popover('hide');
            });
            $(document).on("click", ".btnViewOtherQuotation", function () {
                selectDay = $(this);
                var html = '';
                var urlFindQuotation = '@Url.Action("GetList", new { controller = "Quotation", area = ""})' + '?id=' + selectDay.attr("data");

                $.get(urlFindQuotation, function (data, status) {
                    html = '<div class="col-md-12"><ul class="list-group">';

                    if (data != null && Object.keys(data).length > 0) {
                        $.each(data, function (i, item) {
                            html += '<li class="list-group-item list-group-item-warning"><a href="#" class="btnViewQuoation" title="' + item.QuotationId +'">' + item.QuotationNo + '</a></li>';
                        });

                    } else {
                        html = '<li class="list-group-item ">ไม่พบข้อมูล</li>';
                    }
                    html += '</div></ul>';
                    selectDay.attr("data-content", html)
                    selectDay.attr("title", "ใบเสนอราคา")
                    $("[data-toggle=popover]").popover({ container: 'body' });
                    selectDay.popover('show');

});

                return false;
            });

            

            $(document).on("click", ".btnViewQuoation", function () {
                var QuotationId = $(this).attr('title');

                window.location.href = urlDetail + "/" + QuotationId;
            });

            $(document).on("click", ".btnClone", function () {


                var QuotationId = $(this).attr('data');
                 swal({
                title: "Clone",
                text: "Do you want to clone?",
                type: "success",
                showCancelButton: true,
                closeOnConfirm: false,
                showLoaderOnConfirm: true
            },
                function (isConfirm) {
                    if (isConfirm) {

                        $('#QuotationId').val(QuotationId);
                        $('#frmMain').attr('action', '@Url.Action("Clone", "Quotation")');
                        $('#frmMain').submit();

                    }
                    });

                return false;

            });





        }
</script>
}
    <form method="post" id="frmMain" enctype="multipart/form-data">

        <div class="page">
            <div class="page-header">
                <h1 class="page-title">รายการใบเสนอราคา / Quotation</h1>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", new { controller = "Home", area = "" })" })">หน้าแรก</a></li>
                    <li class="breadcrumb-item"><a href="javascript:void(0)">ฝ่ายขาย</a></li>
                    <li class="breadcrumb-item active">ใบเสนอราคา</li>
                </ol>
            </div>
            <div class="page-content container-fluid">
                <div class="row">
                    <div class="col-12">
                        @if (ViewBag.Alert != null)
                        {
                            @Html.Partial(kemrex.PathViewShared("_wgAlert"), Alert)
                        }
                        <div class="panel">
                            <input type="hidden" id="QuotationId" name="QuotationId" />
                            <div class="panel-heading">
                                <h3 class="panel-title">ใบเสนอราคา&nbsp;<a href="@Url.Action("Detail", new { area = "", controller = "Quotation" })" class="btn btn-xs btn-primary" style="color:white;">เพิ่มข้อมูล</a></h3>
                            </div>
                            <!-- /.box-header -->
                            <div class="panel-body">

                                <div class="row">
                                    <div class="col-12">
                                        <div class="table-responsive divDetail">
                                            <table class="table table-bordered table-hover">
                                                <thead>
                                                    <tr align="center">
                                                        <th>หมายเลข</th>
                                                        <th>ลูกค้า</th>
                                                        <th>ยอดเงิน</th>
                                                        <th>วันที่</th>
                                                        <th>ใบเสนอราคาอ้างอิง</th>
                                                        <th>สถานะ</th>
                                                        <th>เครื่องมือ</th>

                                                    </tr>
                                                </thead>

                                            </table>

                                        </div>
                                    </div>
                                </div>

                            </div>
                            <!-- /.box-body -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
    <script type="text/javascript">
        $(document).ready(function () {
            $("#tblIndex").DataTable({
                "processing": true, // for show progress bar
                "serverSide": true, // for process server side
                "filter": true, // this is for disable filter (search box)
                "orderMulti": false, // for disable multiple column at once
                "ajax": {
                    "url": "/DemoGrid/LoadData",
                    "type": "POST",
                    "datatype": "json"
                },
                "columnDefs":
                    [{
                        "targets": [0],
                        "visible": false,
                        "searchable": false
                    }],
                "columns": [
                    { "data": "CustomerID", "name": "CustomerID", "autoWidth": true },
                    { "data": "Name", "name": "Name", "autoWidth": true },
                    { "data": "Address", "name": "Address", "autoWidth": true },
                    { "data": "Country", "name": "Country", "autoWidth": true },
                    { "data": "City", "name": "City", "autoWidth": true },
                    { "data": "Phoneno", "name": "Phoneno", "autoWidth": true },
                    {
                        "render": function (data, type, full, meta) { return '<a class="btn btn-info" href="/DemoGrid/Edit/' + full.CustomerID + '">Edit</a>'; }
                    },
                    {
                        data: null, render: function (data, type, row) {
                            return "<a href='#' class='btn btn-danger' onclick=DeleteData('" + row.CustomerID + "'); >Delete</a>";
                        }
                    },
                ]

            });
        });


    </script>
