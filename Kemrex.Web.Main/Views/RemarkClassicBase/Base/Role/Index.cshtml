@using Kemrex.Core.Database.Models
@using Kemrex.Web.Common.Controllers
@using Kemrex.Web.Common.Models
@model List<SysRole>
@{
    KemrexController kemrex = ((KemrexController)this.ViewContext.Controller);
    Layout = kemrex.PathViewShared("_lyDefault");
    WidgetAlertModel AlertModel = (WidgetAlertModel)ViewBag.Alert;
    WidgetPaginationModel Pagination = (WidgetPaginationModel)ViewBag.Pagination;
}

@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            window.setTimeout(function () {
                $(".alert").fadeTo(1000, 0).slideUp(1000, function () {
                    $(this).remove();
                });
            }, 5000);
            $(SystemMenu).slideToggle();
        });
    </script>
}
<div class="page">
    <div class="page-header">
        <h1 class="page-title">สิทธิ์การใช้งาน</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", new { controller = "Home", are = "" })" })">หน้าแรก</a></li>
            <li class="breadcrumb-item"><a href="javascript:void(0)">ข้อมูลระบบ</a></li>
            <li class="breadcrumb-item active">สิทธิ์การใช้งาน</li>
        </ol>
    </div>
    <div class="page-content container-fluid">
        <div class="row">
            <div class="col-12">
                @if (ViewBag.Alert != null)
                {
                    @Html.Partial(kemrex.PathViewShared("_wgAlert"), AlertModel)
                }
                <div class="panel">
                    <div class="panel-heading">
                        <h3 class="panel-title">
                            รายการสิทธิ์การใช้งาน
                            <span>&nbsp;</span><a href="@Url.Action("Detail", new { are = "", controller = "Role" })" class="btn btn-xs btn-primary" style="color:white;">เพิ่มข้อมูล</a>
                        </h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="panel-body dataTables_wrapper">
                        <div class="row">
                            <div class="col-12 col-sm-6 form-inline">
                                @Html.Partial(kemrex.PathViewShared("_wgPaginationSize"), Pagination)
                            </div>
                            <div class="col-12 col-sm-6">
                                <div class="dataTables_paginate float-right">
                                    @Html.Partial(kemrex.PathViewShared("_wgPagination"), Pagination)
                                </div>
                                <div class="clear"></div>
                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class="col-12">
                                <div class="table-responsive">
                                    <table class="table table-bordered table-hover">
                                        <thead>
                                            <tr>
                                                <th>ตำแหน่ง</th>
                                                <th>คำอธิบาย</th>
                                                <th>สถานะ</th>
                                                <th>เครื่องมือ</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @if (Model.Count() <= 0)
                                            {
                                                <tr>
                                                    <td colspan="5">ไม่พบข้อมูล</td>
                                                </tr>
                                            }
                                            @foreach (var ob in Model)
                                            {
                                                <tr>
                                                    <td>@ob.RoleName</td>
                                                    <td>@ob.RoleDescription</td>
                                                    <td><i class="fa fa-@(ob.FlagActive.Value ? "check" : "remove")"></i></td>
                                                    <td>
                                                        <a href="@Url.Action("Detail", new { area = "", controller = "Role", id = ob.RoleId })" class="btn btn-xs btn-primary">
                                                            <i class="fa fa-pencil" aria-hidden="true"></i>&nbsp;แก้ไข
                                                        </a>
                                                        <form method="post" action="@Url.Action("Delete", new { area = "", controller = "Role", id = ob.RoleId })" class="fnc-delete inline-block">
                                                            @Html.AntiForgeryToken()
                                                            <button type="submit" class="btn btn-danger btn-xs"><i class="fa fa-trash" aria-hidden="true"></i>&nbsp;ลบ</button>
                                                        </form>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12 col-sm-6">
                                <span>@ViewBag.Pagination.CurrentDisplay</span>
                            </div>
                            <div class="col-12 col-sm-6">
                                <div class="dataTables_paginate float-right">
                                    @Html.Partial(kemrex.PathViewShared("_wgPagination"), Pagination)
                                </div>
                                <div class="clear"></div>
                            </div>
                        </div>
                    </div>
                    <!-- /.box-body -->
                </div>
            </div>
        </div>
    </div>
</div>
