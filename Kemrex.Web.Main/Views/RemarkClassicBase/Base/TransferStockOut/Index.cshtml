@using Kemrex.Core.Database.Models
@using Kemrex.Web.Common.Controllers
@using Kemrex.Web.Common.Models
@using Kemrex.Core.Common.Helper

@{
    ViewBag.Title = "Index";
    KemrexController kemrex = ((KemrexController)this.ViewContext.Controller);
    Layout = kemrex.PathViewShared("_lyDefault");
    WidgetAlertModel Alert = (WidgetAlertModel)ViewBag.Alert;
    //WidgetPaginationModel Pagination = (WidgetPaginationModel)ViewBag.Pagination;

}

@section Scripts {
    <script type="text/javascript">
        var url = '@Url.Action("GetTransferStockOutList", "TransferStockOut")';
        $(document).ready(function () {
            window.setTimeout(function () {
                $(".alert").fadeTo(1000, 0).slideUp(1000, function () {
                    $(this).remove();
                });
            }, 5000);
            waitingDialog.show('Waiting for loading data', { dialogSize: 'md', progressType: 'primary' });

            LoadTable();
        });

        $(EngineerMenu).slideToggle();
        function LoadTable() {

            var html = '';
            var criteria = "";
            var urlDetail = '@Url.Action("Detail", new { controller = "TransferStockOut", area = ""})';
            $(".divDetail").empty();
            html += '<table class="table  table-striped table-hover "  >';
            html += '<thead>';
            html += '<tr class="table-primary" >';
            html += '<th align="center">เลขที่โอนสินค้าออก</th>';
            html += '<th align="center">เลขที่อ้างอิง</th>';
            html += '<th align="center">ผู้โอนสินค้าออก</th>';
            html += '<th align="center">คลัง</th>';
            html += '<th align="center">สถานะ</th>';
            html += '<th align="center">วันที่โอนสินค้าออก</th>';
            html += '<th align="center">วันที่สร้างรายการ</th>';
            html += '<th align="center">เครื่องมือ</th>';
            html += ' </tr>';
            html += '</thead>';
            html += '<tbody>';

            

            $.ajax({
                url: url,
                type: "POST",
                // data: JSON.stringify(criteria),
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                success: function (data) {

                    var statusName = "";
                    if (data != null) {

                        $.each(data, function (index, item) {
                            html += '<tr>';
                            html += '<td align="center">' + item.TransferNo + '</td>';
                            html += '<td>' + item.BillNo + '</td>';
                            html += '<td>' + item.Employee.EmpNameTh + '</td>';
                            html += '<td>' + '' + '</td>';    //Warehouse

                            if (item.TransferStatus == 0) {
                                statusName = "ร่าง";
                            } else if (item.TransferStatus == 1) {
                                statusName = "ส่งแล้ว";
                            } 

                            html += '<td>' + statusName + '</td>';
                            html += '<td align="center">' + item.StrTransferDate + '</td>';
                            html += '<td align="center">' + item.StrCreateDate + '</td>';
                            html += '<td> <a href="' + urlDetail + '/' + item.TransferStockId + '" class="btn btn-xs btn-primary">';
                            html += '<i class="fa fa-pencil" aria-hidden="true"></i>&nbsp;แก้ไข </a>&nbsp;';
                            html += '</tr>';
                        });
                    }
                    html += '</tbody>';
                    html += ' </table>';

                    $(".divDetail").append(html);
                    $(".divDetail table").DataTable(
                        {
                            columnDefs: [
                                { type: 'date-uk', targets: 4 }
                            ],
                            order: [[4, 'desc']]
                        }
                    );
                    window.setTimeout(function () {
                        waitingDialog.hide();
                    }, 2000);
                },
                error: function (error) {
                    alert(error);
                    waitingDialog.hide();
                    //  waitingDialog.hide();
                }
            });
        }
    </script>
}

<div class="page">
    <div class="page-header">
        <h1 class="page-title">โอนสินค้าออก (Stock Out) </h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", new { controller = "Home", area = "" })" })">หน้าแรก</a></li>
            <li class="breadcrumb-item"><a href="javascript:void(0)">คลังสินค้า</a></li>
            <li class="breadcrumb-item active">โอนสินค้าออก (Stock Out)</li>
        </ol>
    </div>
    <div class="page-content container-fluid">
        <div class="row">
            <div class="col-12">
                @if (ViewBag.Alert != null)
                {
                    @Html.Partial(kemrex.PathViewShared("_wgAlert"), Alert)
                }
                <div class="panel">
                    <div class="panel-heading">
                        <h3 class="panel-title">โอนสินค้าออก (Stock Out)<a href="@Url.Action("Detail", new { area = "", controller = "TransferStockOut" })" class="btn btn-xs btn-primary" style="color:white;">เพิ่มข้อมูล</a></h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="panel-body dataTables_wrapper">
                        
                        <div class="row">
                            <div class="col-12">
                                <div class="table-responsive divDetail">
                                    <table class="table table-bordered table-hover">
                                        <thead>
                                            <tr align="center">
                                                <th align="center">เลขที่โอนสินค้าออก</th>
                                                <th align="center">เลขที่อ้างอิง</th>
                                                <th align="center">ผู้โอนสินค้าออก</th>
                                                <th align="center">สถานะ</th>
                                                <th align="center">วันที่โอนสินค้าออก</th>
                                                <th align="center">วันที่สร้างรายการ</th>
                                                <th align="center">เครื่องมือ</th>
                                                @*<th>สถานะ</th>
        <th>เครื่องมือ</th>*@
                                            </tr>
                                        </thead>
                                        
                                    </table>

                                </div>
                            </div>
                        </div>
                        
                    </div>
                    <!-- /.box-body -->
                </div>
            </div>
        </div>
    </div>
</div>