@using Kemrex.Core.Database.Models
@using Kemrex.Web.Common.Controllers
@using Kemrex.Web.Common.Models
@model List<SysAccount>
@{
    KemrexController kemrex = ((KemrexController)this.ViewContext.Controller);
    Layout = kemrex.PathViewShared("_lyDefault");
    WidgetAlertModel AlertModel = (WidgetAlertModel)ViewBag.Alert;
    //WidgetPaginationModel Pagination = (WidgetPaginationModel)ViewBag.Pagination;
}

@section Scripts {
    <script type="text/javascript">

        var isMobile = IsMobile();
        $(document).ready(function () {
            window.setTimeout(function () {
                $(".alert").fadeTo(1000, 0).slideUp(1000, function () {
                    $(this).remove();
                });
            }, 5000);

            $(SystemMenu).slideToggle();
            if (!isMobile) {
                waitingDialog.show('Waiting for loading data', { dialogSize: 'md', progressType: 'primary' });
            }
            LoadTable();
        });

           $(document).on("click", ".btnDelete", function () {


               var AccountId = $(this).closest("tr").attr('accountid');
                 swal({
                title: "Delete",
                text: "Do you want to delete?",
                type: "warning",
                showCancelButton: true,
                closeOnConfirm: false,
                showLoaderOnConfirm: true
            },
                function (isConfirm) {
                    if (isConfirm) {

                        
                        $('#AccountId').val(AccountId);
                      
                        $('#frmMain').submit();

                    }
                    });

                return false;

            });



        function LoadTable() {

            var html = '';
            var criteria = "";
            var url = '@Url.Action("GetAccountList", new { controller = "Account" })';
            var urlDetail = '@Url.Action("Detail", new { controller = "Account", area = ""})';
            var urlDelete = '@Url.Action("Delete", new { controller = "Account", area = ""})';
            $(".divDetail").empty();



          

            if (isMobile) {

                html += '<table class="table table-hover" >';
                html += '<thead>';
                html += '<tr class="">';
                html += '<th></th>';
                html += '</tr>';
                html += '</thead>';
                $.ajax({
                    url: url,
                    type: "POST",
                    // data: JSON.stringify(criteria),
                    dataType: "json",
                    contentType: "application/json; charset=utf-8",
                    success: function (data) {
                        html += '<tbody>';
                        if (data != null && data.length > 0) {

                            $.each(data, function (index, item) {
                                html += '<tr accountid="' + item.AccountId + '">';
                                html += '<td>'
                                html += '<div class="">'
                                html += '<div class="content">'
                                html += '<div class="row" >';
                                html += '<div class="col-sm-5">';
                                html += '<div class="icon-big text-center">';

                                html += '</div>';
                                html += '</div>';
                                html += '<div class="col-sm-10">';
                                html += '<div>';
                                html += '<div class="col-sm-12"><div class="textrow"><div class="text-primary"><b>ชื่อบัญชี</b></div> : <div class="text-default">' + item.AccountUsername + '</div></div></div>';
                                html += '<div class="col-sm-12"><div class="textrow"><div class="text-primary"><b>กลุ่มผุ้ใช้งาน</b></div>  : ' + (item.SysAccountRole != null && item.SysAccountRole.Role != null ? item.SysAccountRole.Role.RoleName : "") + '</div></div>';
                                html += '<div class="col-sm-12"><div class="textrow"><div class="text-primary"><b>ชื่อผู้ใช้งาน</b></div> : ' + item.AccountFirstName  + '</div></div>';
                       
                                html += '<div>';
                                html += '<a href="' + urlDetail + '/' + item.AccountId + '" class="btn btn-md btn-floating btn-primary">';
                                html += '<i class="fa fa-pencil" aria-hidden="true"></i></a>';
                                html += '<button type="submit" class="btn btn-danger btn-md btn-floating btnDelete"><i class="fa fa-trash " aria-hidden="true"></i></button>';
                               html+='</div>';
                                html += '</div>';
                                html += '</div>';
                                html += '</div>';

                                html += '</div>';
                                html += '</td>'
                                html += '</tr>';
                            });
                        }
                        html += '</tbody>';

                        html += ' </table>';

                        $(".divDetail").append(html);
                        $(".divDetail table").DataTable(
                            { searching: false, paging: true, info: false }
                        );

                        window.setTimeout(function () {
                            waitingDialog.hide();

                            $(".modal-backdrop").remove();

                        }, 2000);

                        waitingDialog.hide();
                    }
                });


            } else {


                html += '<table class="table  table-striped table-hover "  >';
                html += '<thead>';
                html += '<tr class="table-primary" >';
                html += '<th>ชื่อบัญชี</th>';
                html += '<th>กลุ่มผุ้ใช้งาน</th>';
                html += '<th>ชื่อผู้ใช้งาน</th>';
                html += '<th>เครื่องมือ</th>';
                html += '</tr>';
                html += '</thead>';
                html += '<tbody>';

                $.ajax({
                    url: url,
                    type: "POST",
                    // data: JSON.stringify(criteria),
                    dataType: "json",
                    contentType: "application/json; charset=utf-8",
                    success: function (data) {

                        if (data != null) {

                            $.each(data, function (index, item) {
                                html += '<tr accountid="'+item.AccountId+'">';
                                html += '<td>' + item.AccountUsername + '</td>';
                                html += '<td>' + (item.SysAccountRole != null && item.SysAccountRole.Role != null ? item.SysAccountRole.Role.RoleName : "") + '</td>';
                                html += '<td>' + item.AccountFirstName + '</td>';

                                html += '<td>';
                                html += '<a href="' + urlDetail + '/' + item.AccountId + '" class="btn btn-xs btn-primary">';
                                html += '<i class="fa fa-pencil" aria-hidden="true"></i>&nbsp;แก้ไข </a>&nbsp;';
                                html += '<button type="submit"  class="btn btn-danger btn-xs btnDelete"><i class="fa fa-trash" aria-hidden="true"></i>&nbsp;ลบ</button>';
                                html += '</td>';
                                html += '</tr>';
                            });
                        }
                        html += '</tbody>';
                        html += ' </table>';

                        $(".divDetail").append(html);
                        $(".divDetail table").DataTable(
                            {
                                //columnDefs: [
                                //    { type: 'date-uk', targets: 4 }
                                //],
                                order: [[0, 'asc']]
                            }
                        );
                        window.setTimeout(function () {
                            waitingDialog.hide();
                        }, 2000);
                    },
                    error: function (error) {
                        window.setTimeout(function () {
                            waitingDialog.hide();
                        }, 2000);
                    }
                });
            }
        }
    </script>
}
    <form method="post" action="@Url.Action("Delete", new { controller = "Account", are = "" })" id="frmMain">
        <div class="page">
            
            @Html.AntiForgeryToken()

            <input type="hidden" id="AccountId" name="AccountId" />
            <div class="page-header">
                <h1 class="page-title">รายชื่อผู้ใช้งาน</h1>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", new { controller = "Home", are = "" })" })">Home</a></li>
                    <li class="breadcrumb-item"><a href="javascript:void(0)">Data</a></li>
                    <li class="breadcrumb-item active">รายชื่อผู้ใช้งาน</li>
                </ol>
            </div>

            <div class="page-content container-fluid">
                <div class="row">
                    <div class="col-12">
                        @if (ViewBag.Alert != null)
                        {
                            @Html.Partial(kemrex.PathViewShared("_wgAlert"), AlertModel)
                        }
                        <div class="panel">
                            <div class="panel-heading">
                                <h3 class="panel-title">รายชื่อผู้ใช้งาน&nbsp;<a href="@Url.Action("Detail", new { are = "", controller = "Account" })" class="btn btn-xs btn-primary" style="color:white;">เพิ่มข้อมูล</a></h3>
                            </div>
                            <!-- /.box-header -->
                            <div class="panel-body dataTables_wrapper">
                                <div class="row">
                                    <div class="col-12">
                                        <div class="table-responsive divDetail">
                                            <table class="table table-bordered table-hover">
                                                <thead>
                                                    <tr>
                                                        <th>ชื่อบัญชี</th>
                                                        <th>กลุ่มผุ้ใช้งาน</th>
                                                        <th>ชื่อผู้ใช้งาน</th>
                                                        <th>เครื่องมือ</th>
                                                    </tr>
                                                </thead>

                                            </table>
                                        </div>
                                    </div>
                                </div>

                            </div>
                            <!-- /.box-body -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
