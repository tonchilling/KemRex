@using Kemrex.SoilCalculator.Web.Models
@model SoilCalculatedModel
@{
    Layout = "~/Views/Shared/_lyDefault.cshtml";
    bool canWrite = (bool)ViewBag.canWrite;
}

@section script {
    <script type="text/javascript">
        $(document).ready(function () {
            $("div.wizard-buttons").hide();
        });
    </script>
}

<div class="page">
    <div class="page-header">
        <h1 class="page-title">KEMREX CAPACITY LOAD CALCULATION</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="../index-2.html">Home</a></li>
            <li class="breadcrumb-item"><a href="javascript:void(0)">Soil Value form</a></li>
            <li class="breadcrumb-item active">Calculator</li>
        </ol>

    </div>

    <div class="page-content container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <!-- Panel Wizard Form -->
                <div class="panel" id="exampleWizardForm">
                    <div class="panel-heading">
                        <h3 class="panel-title">Soil Value Form</h3>
                    </div>
                    <div class="panel-body">
                        <!-- Steps -->
                        <div class="row" data-plugin="matchHeight">
                            <div class="step col-lg-6 done" data-target="#exampleAccount" role="tab">
                                <span class="step-number">1</span>
                                <div class="step-desc">
                                    <span class="step-title">Compression capacity</span>
                                    <p>Calculation</p>
                                </div>
                            </div>
                            <div class="step col-lg-6 current" data-target="#exampleGetting" role="tab">
                                <span class="step-number">2</span>
                                <div class="step-desc">
                                    <span class="step-title">Finish</span>
                                    <p>Waiting for the goods & Print Report</p>
                                </div>
                            </div>
                        </div>
                        <form id="exampleBillingForm" method="post" action="@Url.Action("SetCalculated", new { area = "", controller = "Soil" })" class="form">
                            <input type="hidden" name="CalId" value="@Model.calId" />
                            <div class="row">
                                <div class="col-12">
                                    <div class="form-group">
                                        <label class="form-control-label text-left"><strong>Soil strength parameter</strong></label>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-6">
                                    <div class="form-group">
                                        <label class="form-control-label">C (kg/m<sup>2</sup>): </label>
                                        <input type="text" name="inputC" value="@Model.inputC" class="form-control" readonly="readonly" />
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="form-group">
                                        <label class="form-control-label">ϕ (degree): </label>
                                        <input type="text" name="inputDegree" value="@Model.inputDegree" class="form-control" readonly="readonly" />
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-6">
                                    <div class="form-group">
                                        <label class="form-control-label">KEMREX Model: </label>
                                        <input type="text" value="@Model.ModelInfo.PileName" class="form-control" readonly="readonly" />
                                        <input type="hidden" name="inputModel" value="@Model.ModelId" />
                                    </div>
                                </div>
                                @if (Model.inputSafeload > 1)
                                {
                                    <div class="col-6">
                                        <div class="form-group">
                                            <label class="form-control-label">Safe Load: </label>
                                            <input type="text" name="inputSafeLoad" value="@Model.inputSafeload" class="form-control" readonly="readonly" />
                                        </div>
                                    </div>
                                }
                            </div>
                            <hr />
                            <div class="row">
                                <div class="col-8">
                                    <div class="row">
                                        <div class="col-12">
                                            <label class="form-control-label text-left">
                                                <strong>Compression capacity Calculation</strong><br />
                                                Q<sub>b</sub> = 9S<sub>u</sub>A<sub>b</sub>
                                            </label>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-12">
                                            <label class="form-control-label text-left">
                                                <strong><u>End bearing For Clay</u></strong>
                                            </label>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-6">
                                            <div class="form-group">
                                                <label class="form-control-label">When S<sub>u</sub></label>
                                                <input type="text" value="@Model.inputC" class="form-control" readonly="readonly" />
                                            </div>
                                        </div>
                                        <div class="col-6">
                                            <div class="form-group">
                                                <label class="form-control-label">D</label>
                                                <input type="text" value="@Model.ClayDia.ToString("#,##0.000")" class="form-control" readonly="readonly" />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-6">
                                            <div class="form-group">
                                                <label class="form-control-label">A<sub>b</sub> = πDl<sup>2</sup>/4</label>
                                                <input type="text" value="@Model.ClayAb.ToString("#,##0.00000")" class="form-control" readonly="readonly" />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-6">
                                            <div class="form-group">
                                                <label class="form-control-label"><strong>Q<sub>b</sub></strong> (kg)</label>
                                                <input type="text" value="@Model.Qu.ToString("#,##0.00")" class="form-control" readonly="readonly" />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-12">
                                            <label class="form-control-label text-left">
                                                <strong><u>Shear Soil</u></strong><br />
                                                Shear area = 2πrh
                                            </label>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-4 text-center text-middle">
                                    <span>@((Model.ModelInfo.PileDia * 1000).ToString("#,##0")) mm</span><br />
                                    <img src="~/@Model.ModelInfo.TblPileSeries.SeriesImage" class="" />
                                    <span style="
                                        right: 15%;
                                        top: 180px;
                                        position: absolute;
                                        display: block;
                                    ">@(Model.ModelInfo.PileLength.ToString("#,##0"))mm</span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-6">
                                    <div class="form-group">
                                        <label class="form-control-label">When h (m)</label>
                                        <input type="text" value="@Model.ShearH" class="form-control" readonly="readonly" />
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="form-group">
                                        <label class="form-control-label">Shear area (m<sup>2</sup>)</label>
                                        <input type="text" value="@Model.ShearArea.ToString("#,##0.000")" class="form-control" readonly="readonly" />
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-6">
                                    <div class="form-group">
                                        <label class="form-control-label">Shear resist. (kg)</label>
                                        <input type="text" value="@Model.ShearResist.ToString("#,##0.00")" class="form-control" readonly="readonly" />
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="form-group">
                                        <label class="form-control-label">Ultimate Compression Force (kg)</label>
                                        <input type="text" value="@Model.UltCompressForce.ToString("#,##0")" class="form-control" readonly="readonly" />
                                    </div>
                                </div>
                            </div>
                            @if (Model.inputSafeload > 1)
                            {
                                <div class="row">
                                    <div class="col-6">
                                        <div class="form-group">
                                            <label class="form-control-label"><strong>Safe Load</strong> (kg)</label>
                                            <input type="text" value="@Model.Qcomp.ToString("#,##0.00")" class="form-control" readonly="readonly" />
                                        </div>
                                    </div>
                                </div>
                            }
                            <div class="row">
                                <div class="col-12">
                                    <label class="form-control-label text-left">
                                        <strong>Uplift capacity calculation</strong><br />
                                        Volume of soil: V = (1/3)πr<sup>2</sup>h<br />
                                        When ϕ > 0
                                    </label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-6">
                                    <div class="form-group">
                                        <label class="form-control-label">h<sub>cone</sub> (m)</label>
                                        <input type="text" value="@Model.UpliftH.ToString("#,##0.000")" class="form-control" readonly="readonly" />
                                    </div>
                                </div>
                                @*<div class="col-6">
                <div class="form-group">
                    <label class="form-control-label">N/A (m<sup>3</sup>)</label>
                    <input type="text" value="@Model.UpliftHcone" class="form-control" readonly="readonly" />
                </div>
            </div>*@
                            </div>
                            <div class="row">
                                <div class="col-6">
                                    <div class="form-group">
                                        <label class="form-control-label">Weight of soil (kg)</label>
                                        <input type="text" value="@Model.WeightOfSoil.ToString("#,##0")" class="form-control" readonly="readonly" />
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="form-group">
                                        <label class="form-control-label">Shear resistance (kg)</label>
                                        <input type="text" value="@Model.ShearResist.ToString("#,##0.00")" class="form-control" readonly="readonly" />
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-6">
                                    <div class="form-group">
                                        <label class="form-control-label">Ultimate Uplift Force (kg)</label>
                                        <input type="text" value="@Model.UltUpliftForce.ToString("#,##0")" class="form-control" readonly="readonly" />
                                    </div>
                                </div>
                                @if (Model.inputSafeload > 1)
                                {
                                    <div class="col-6">
                                        <div class="form-group">
                                            <label class="form-control-label">Safe Load (kg)</label>
                                            <input type="text" value="@Model.Quplift.ToString("#,##0.00")" class="form-control" readonly="readonly" />
                                        </div>
                                    </div>
                                }
                            </div>
                            <div class="row">
                                <div class="col-6">
                                    <div class="form-group">
                                        <label class="form-control-label">ชื่อโครงการ</label>
                                        <input type="text" value="@Model.ProjectName" name="ProjectName" maxlength="100" class="form-control" placeholder="ชื่อโครงการ" />
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-group">
                                        <label class="form-control-label">หมายเหตุ</label>
                                        <input type="text" value="@Model.CalRemark" name="CalRemark" class="form-control" />
                                    </div>
                                </div>
                            </div>
                            <hr />
                            <div class="row">
                                <div class="col-12">
                                    @if (canWrite)
                                    {
                                        <button type="submit" class="btn btn-primary">Save</button>
                                    }
                                    <a href="@Url.Action((canWrite ? "Calculator" : "Index"), new { are = "", controller = "Soil" })" class="btn btn-default">Back</a>
                                </div>
                            </div>
                        </form>

                    </div>
                </div>
                <!-- End Panel Wizard One Form -->
            </div>
        </div>

    </div>
</div>
<!-- End Page -->