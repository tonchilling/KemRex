@using Kemrex.Database
@using Kemrex.SoilCalculator.Web.Models
@model List<TblCalLoad>
@{
    Layout = "~/Views/Shared/_lyDefault.cshtml";
    bool canWrite = (bool)ViewBag.canWrite;
    bool canDelete = (bool)ViewBag.canDelete;
    bool canExport = (bool)ViewBag.canExport;
    WidgetAlertModel AlertModel = (WidgetAlertModel)ViewBag.Alert;
    WidgetPaginationModel Pagination = (WidgetPaginationModel)ViewBag.Pagination;
}

@section script {
    <script type="text/javascript">
        $(document).ready(function () {
            window.setTimeout(function () {
                $(".alert").fadeTo(1000, 0).slideUp(1000, function () {
                    $(this).remove();
                });
            }, 5000);
        });
    </script>
}

<div class="page">
    <div class="page-header">
        <h1 class="page-title">Load Calculator</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", new { controller = "Home", are = "" })" })">Home</a></li>
            <li class="breadcrumb-item"><a href="javascript:void(0)">การคำนวณ</a></li>
            <li class="breadcrumb-item active">Load Calc</li>
        </ol>
    </div>

    <div class="page-content container-fluid">
        <div class="row">
            <div class="col-12">
                @if (ViewBag.Alert != null)
                {
                    @Html.Partial("_wgAlert", AlertModel)
                }
                <div class="panel">
                    <div class="panel-heading">
                        <h3 class="panel-title">
                            Lod Calculator
                            @if (canWrite)
                            {
                                <span>&nbsp;<a href="@Url.Action("Calculator", new { are = "", controller = "Soil" })" class="btn btn-xs btn-primary" style="color:white;">เริ่มคำนวณ</a></span>
                            }
                        </h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="panel-body dataTables_wrapper">
                        <div class="row">
                            <div class="col-12 col-sm-6 form-inline">
                                @Html.Partial("_wgPaginationSize", Pagination)
                            </div>
                            <div class="col-12 col-sm-6">
                                <div class="dataTables_paginate float-right">
                                    @Html.Partial("_wgPagination", Pagination)
                                </div>
                                <div class="clear"></div>
                            </div>
                            <br /><br />
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <div class="table-responsive">
                                    <table class="table table-bordered table-hover">
                                        <thead>
                                            <tr>
                                                <th>โครงการ</th>
                                                <th>รุ่นเข็ม</th>
                                                <th>C</th>
                                                <th>Safe Load</th>
                                                <th>เครื่องมือ</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @if (Model.Count() <= 0)
                                            {
                                                <tr>
                                                    <td colspan="5">ไม่พบข้อมูล</td>
                                                </tr>
                                            }
                                            @foreach (var ob in Model)
                                            {
                                                <tr>
                                                    <td>@ob.ProjectName</td>
                                                    <td>@ob.PileModel().PileName</td>
                                                    <td>@ob.InputC.ToString("#,##0.00")</td>
                                                    <td>@(ob.InputSafeLoad == 1 ? "ไม่คำนวณ" : ob.InputSafeLoad.ToString("0.0"))</td>
                                                    <td>
                                                        <form method="post" action="@Url.Action("Calculated", "Soil")" class="inline-block">
                                                            <input type="hidden" name="CalId" value="@ob.CalId" />
                                                            <input type="hidden" name="inputC" value="@ob.InputC" />
                                                            <input type="hidden" name="inputModel" value="@ob.ModelId" />
                                                            <input type="hidden" name="inputDegree" value="@ob.InputDegree" />
                                                            <input type="hidden" name="inputSafeLoad" value="@ob.InputSafeLoad" />
                                                            <input type="hidden" name="inputProject" value="@ob.ProjectName" />
                                                            <input type="hidden" name="inputRemark" value="@ob.CalRemark" />
                                                            <button type="submit" class="btn btn-primary btn-xs"><i class="fa fa-eye" aria-hidden="true"></i>&nbsp;ดูข้อมูล</button>
                                                        </form>
                                                        @if (canExport)
                                                        {
                                                            <span>&nbsp;</span>
                                                            <a href="@Url.Action("Export", new { controller = "Soil", are = "", id = ob.CalId })"
                                                               class="btn btn-success btn-xs"
                                                               target="_blank">
                                                                <i class="fa fa-download" aria-hidden="true"></i>&nbsp;ดาวน์โหลด
                                                            </a>
                                                        }
                                                        @if (canDelete)
                                                        {
                                                            <span>&nbsp;</span>
                                                            <form method="post" action="@Url.Action("Delete", new { controller = "Soil", are = "", id = ob.CalId })"
                                                                  class="fnc-delete inline-block">
                                                                <input type="hidden" name="calId" value="@ob.CalId" />
                                                                @Html.AntiForgeryToken()
                                                                <button type="submit" class="btn btn-danger btn-xs"><i class="fa fa-trash" aria-hidden="true"></i>&nbsp;ลบ</button>
                                                            </form>
                                                        }
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12 col-sm-6">
                                <span>@Pagination.CurrentDisplay</span>
                            </div>
                            <div class="col-12 col-sm-6">
                                <div class="dataTables_paginate float-right">
                                    @Html.Partial("_wgPagination", Pagination)
                                </div>
                                <div class="clear"></div>
                            </div>
                        </div>
                    </div>
                    <!-- /.box-body -->
                </div>
            </div>
        </div>
    </div>
</div>