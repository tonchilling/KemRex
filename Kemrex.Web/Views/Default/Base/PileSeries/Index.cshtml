@using Kemrex.Core.Database.Models
@using Kemrex.Web.Controllers.Base
@using Kemrex.Web.Common.Models
@model List<TblPileSeries>
@{
    ViewBag.Title = "Index";
    KemrexController kemrex = ((KemrexController)this.ViewContext.Controller);
    Layout = kemrex.PathViewShared("_lyDefault");
    WidgetAlertModel Alert = (WidgetAlertModel)ViewBag.Alert;
    WidgetPaginationModel Pagination = (WidgetPaginationModel)ViewBag.Pagination;
}

@section script {
    <script type="text/javascript">
        $(document).ready(function () {
            window.setTimeout(function () {
                $(".alert").fadeTo(1000, 0).slideUp(1000, function () {
                    $(this).remove();
                });
            }, 5000);
        });
    </script>
}

<div class="page">
    <div class="page-header">
        <h1 class="page-title">ซีรี่ย์สินค้า</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", new { controller = "Home", are = "" })" })">หน้าแรก</a></li>
            <li class="breadcrumb-item"><a href="javascript:void(0)">ตั้งค่าพื้นฐาน</a></li>
            <li class="breadcrumb-item active">ซีรี่ย์สินค้า</li>
        </ol>
    </div>

    <div class="page-content container-fluid">
        <div class="row">
            <div class="col-12">
                @if (ViewBag.Alert != null)
                {
                    @Html.Partial(kemrex.PathViewShared("_wgAlert"), Alert)
                }
                <div class="panel">
                    <div class="panel-heading">
                        <h3 class="panel-title">ซีรี่ย์สินค้า&nbsp;<a href="@Url.Action("Detail", new { are = "", controller = "PileSeries" })" class="btn btn-xs btn-primary" style="color:white;">เพิ่มข้อมูล</a></h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="panel-body dataTables_wrapper">
                        <div class="row">
                            <div class="col-12 col-sm-6 form-inline">
                                @Html.Partial(kemrex.PathViewShared("_wgPaginationSize"), Pagination)
                            </div>
                            <div class="col-12 col-sm-6">
                                <div class="dataTables_paginate float-right">
                                    @Html.Partial(kemrex.PathViewShared("_wgPagination"), Pagination)
                                </div>
                                <div class="clear"></div>
                            </div>
                            <br /><br />
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <div class="table-responsive">
                                    <table class="table table-bordered table-hover">
                                        <thead>
                                            <tr>
                                                <th>ชื่อ</th>
                                                <th>ลำดับ</th>
                                                <th>เครื่องมือ</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @if (Model.Count() <= 0)
                                            {
                                                <tr>
                                                    <td colspan="3">ไม่พบข้อมูล</td>
                                                </tr>
                                            }
                                            @foreach (var ob in Model)
                                            {
                                                <tr>
                                                    <td>@ob.SeriesName</td>
                                                    <td class="text-center">@ob.SeriesOrder.ToString()</td>
                                                    <td>
                                                        <a href="@Url.Action("Detail", new { controller = "PileSeries", are = "", id = ob.SeriesId })"
                                                           class="btn btn-xs btn-primary">
                                                            <i class="fa fa-pencil" aria-hidden="true"></i>&nbsp;แก้ไข
                                                        </a>
                                                        <form method="post" action="@Url.Action("Delete", new { controller = "PileSeries", are = "" })"
                                                              class="fnc-delete inline-block">
                                                            <input type="hidden" name="SeriesId" value="@ob.SeriesId" />
                                                            @Html.AntiForgeryToken()
                                                            <button type="submit" class="btn btn-danger btn-xs"><i class="fa fa-trash" aria-hidden="true"></i>&nbsp;ลบ</button>
                                                        </form>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12 col-sm-6">
                                <span>@Pagination.CurrentDisplay</span>
                            </div>
                            <div class="col-12 col-sm-6">
                                <div class="dataTables_paginate float-right">
                                    @Html.Partial(kemrex.PathViewShared("_wgPagination"), Pagination)
                                </div>
                                <div class="clear"></div>
                            </div>
                        </div>
                    </div>
                    <!-- /.box-body -->
                </div>
            </div>
        </div>
    </div>
</div>